<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/blood_glucose_risk_assessment_list_item2_rel_bg"
    android:background="#151619"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/main_text_color"
        android:id="@+id/blood_glucose_risk_assessment_list_item2_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:12"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/main_text_color"
        android:gravity="center"
        android:id="@+id/blood_glucose_risk_assessment_list_item2_tv_status"
        android:background="@drawable/bg_rect_blood_glucose_un_select_bg_r5"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_26"
        android:text="@string/fasting_for_8_hours"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/blood_glucose_risk_assessment_list_item2_tv_time"/>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/main_text_color"
            android:id="@+id/blood_glucose_risk_assessment_list_item2_tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.2 - 7.4"/>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@color/msg_remark_text_color"
            android:id="@+id/blood_glucose_risk_assessment_list_item2_tv_value_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mmol"
            android:layout_marginStart="@dimen/dp_5"/>
    </LinearLayout>
</RelativeLayout>
