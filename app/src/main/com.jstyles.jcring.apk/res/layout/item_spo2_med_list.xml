<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/heart_manual_item_rel"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_55">
    <TextView
        android:textSize="@dimen/sp_21"
        android:textColor="@color/main_text_color"
        android:id="@+id/heart_manual_item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:text="0"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_20"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="#50ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_22"
        android:scaleType="fitXY"
        android:text="%"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_toEndOf="@+id/heart_manual_item_tv_time"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/msg_remark_text_color"
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:text="bmp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_alignParentEnd="true"/>
    <View
        android:id="@+id/health_edit_item_line"
        android:background="#10ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1_5"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_alignStart="@+id/heart_manual_item_tv_time"/>
</RelativeLayout>
