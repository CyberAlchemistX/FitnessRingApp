<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:id="@+id/dialog_mian"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/me_info_msg_item_bg"
        android:padding="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_21"
            android:textColor="@color/main_text_color"
            android:id="@+id/dialog_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="权限申请"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/main_text_color"
            android:id="@+id/dialog_tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="ddddddddddddddddddddddddd"/>
        <LinearLayout
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/main_text_color"
                android:id="@+id/dialog_tv_cancel"
                android:background="@drawable/ripple_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/require_cancel"
                android:layout_marginEnd="@dimen/dp_20"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/main_text_color"
                android:id="@+id/dialog_tv_require"
                android:background="@drawable/ripple_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/require_now"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
