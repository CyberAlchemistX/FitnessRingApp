<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_ll">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="@dimen/dp_180"
                android:layout_height="@dimen/dp_42"
                android:src="@mipmap/app_h_logo"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/login_top_icon"
                android:layout_width="@dimen/dp_125"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_top_icon"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/bottom_ll"
        android:layout_width="@dimen/dp_245"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/login_splash_lin_login"
            android:background="@drawable/bg_rect_device_btn_r25_ripple"
            android:layout_width="@dimen/dp_245"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_15">
            <ImageView
                android:layout_width="@dimen/dp_13"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_splash_meun1"
                android:adjustViewBounds="true"
                android:layout_marginEnd="@dimen/dp_18"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_btn_text1"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/login_splash_lin_register"
            android:background="@drawable/bg_rect_msg_item_r25_ripple"
            android:layout_width="@dimen/dp_245"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_15">
            <ImageView
                android:layout_width="@dimen/dp_13"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_splash_meun2"
                android:adjustViewBounds="true"
                android:layout_marginEnd="@dimen/dp_18"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/main_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_btn_text1"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@color/msg_remark_text_color"
            android:gravity="center"
            android:id="@+id/login_splash_tv_fangke"
            android:background="@drawable/bg_unlogin_r20"
            android:layout_width="@dimen/dp_245"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/login_splash_tip5"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30">
            <RelativeLayout
                android:id="@+id/login_splash_rel_private"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30">
                <ImageView
                    android:id="@+id/login_splash_iv_private"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/login_splash_no_select"
                    android:adjustViewBounds="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/dp_16"/>
            </RelativeLayout>
            <TextView
                android:textSize="@dimen/sp_13"
                android:textColor="@color/msg_remark_text_color"
                android:id="@+id/login_splash_tv_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_splash_tip1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
