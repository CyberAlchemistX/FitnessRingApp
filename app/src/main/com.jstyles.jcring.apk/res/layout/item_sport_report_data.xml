<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/sport_type_img"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginBottom="@dimen/dp_19"
        android:src="@mipmap/sport_list_time"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_30_5"
        android:layout_marginEnd="@dimen/dp_14"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/sport_type_img">
        <TextView
            android:textSize="@dimen/sp_17"
            android:textColor="@color/main_text_color"
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_4"
            android:includeFontPadding="false"/>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@color/msg_remark_text_color"
            android:id="@+id/data_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_15"
            android:includeFontPadding="false"/>
    </LinearLayout>
</RelativeLayout>
