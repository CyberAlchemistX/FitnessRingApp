<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_mian"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_gravity="bottom"
        android:background="@color/main_bg_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/main_text_color"
            android:gravity="center"
            android:id="@+id/chose_video"
            android:background="@drawable/bg_rect_msg_item_r20_center_ripple"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54_5"
            android:text="@string/chose_video"
            android:includeFontPadding="false"/>
        <View
            android:id="@+id/null_0"
            android:background="@color/main_bg_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/chose_video"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/main_text_color"
            android:gravity="center"
            android:id="@+id/chose_pic"
            android:background="@drawable/bg_rect_msg_item_r20_center_ripple"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54_5"
            android:text="@string/chose_pic"
            android:includeFontPadding="false"
            android:layout_below="@+id/null_0"/>
        <View
            android:id="@+id/null_1"
            android:background="@color/main_bg_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/chose_pic"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/main_text_color"
            android:gravity="center"
            android:id="@+id/take_pic"
            android:background="@drawable/bg_rect_msg_item_r20_center_ripple"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54_5"
            android:text="@string/take_pic"
            android:includeFontPadding="false"
            android:layout_below="@+id/null_1"/>
        <View
            android:id="@+id/null_2"
            android:background="@color/main_bg_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_11"
            android:layout_below="@+id/take_pic"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/main_text_color"
            android:gravity="center"
            android:id="@+id/cancle"
            android:background="@drawable/bg_rect_msg_item_r20_center_ripple"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54_5"
            android:text="@string/cancel"
            android:includeFontPadding="false"
            android:layout_below="@+id/null_2"/>
    </RelativeLayout>
</LinearLayout>
