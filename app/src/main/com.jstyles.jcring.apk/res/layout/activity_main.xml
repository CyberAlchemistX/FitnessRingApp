<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/fragment_health_new_report"
            layout="@layout/fragment_health_new_report"/>
        <include
            android:id="@+id/fragment_mian"
            android:visibility="gone"
            layout="@layout/fragment_home"/>
        <include
            android:id="@+id/fragment_run"
            android:visibility="gone"
            layout="@layout/fragment_run"/>
        <include
            android:id="@+id/fragment_me"
            android:visibility="gone"
            layout="@layout/fragment_me_v2"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_82"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/run_button"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:background="#1b1d20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_65"/>
        <LinearLayout
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_82">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <RelativeLayout
                android:id="@+id/ai_rt"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="@dimen/dp_68"
                    android:layout_height="@dimen/dp_68"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:id="@+id/ai_more"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:layout_centerInParent="true"/>
                    <ImageView
                        android:layout_width="@dimen/dp_31"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_15"
                        android:src="@mipmap/ai_centen_img"
                        android:scaleType="fitXY"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <RadioGroup
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:id="@+id/rg_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_82"
            android:checkedButton="@+id/rb_mian">
            <RadioButton
                android:textSize="@dimen/sp_9_4"
                android:textColor="@drawable/main_select_text_color"
                android:gravity="center"
                android:id="@+id/rb_health"
                android:background="@drawable/ripple_bg"
                android:paddingTop="@dimen/dp_20"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_65"
                android:button="@null"
                android:text="@string/mian"
                android:drawableTop="@drawable/main_tab_home_selector"
                android:layout_weight="1"/>
            <RadioButton
                android:textSize="@dimen/sp_9_4"
                android:textColor="@drawable/main_select_text_color"
                android:gravity="center"
                android:id="@+id/rb_devices"
                android:background="@drawable/ripple_bg"
                android:paddingTop="@dimen/dp_20"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_65"
                android:button="@null"
                android:text="@string/health"
                android:drawableTop="@drawable/main_tab_devive_selector"
                android:layout_weight="1"/>
            <RadioButton
                android:gravity="top"
                android:layout_gravity="top"
                android:id="@+id/home_mian_run"
                android:background="@drawable/ripple_bg"
                android:visibility="gone"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_65"
                android:button="@null"
                android:drawableTop="@mipmap/app_logo"
                android:layout_weight="1"/>
            <RadioButton
                android:textSize="@dimen/sp_9_4"
                android:textColor="@drawable/main_select_text_color"
                android:gravity="center"
                android:id="@+id/rb_run"
                android:background="@drawable/ripple_bg"
                android:paddingTop="@dimen/dp_20"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_65"
                android:button="@null"
                android:text="@string/exercise"
                android:drawableTop="@drawable/main_tab_run_selector"
                android:layout_weight="1"/>
            <RadioButton
                android:textSize="@dimen/sp_9_4"
                android:textColor="@drawable/main_select_text_color"
                android:gravity="center"
                android:id="@+id/rb_me"
                android:background="@drawable/ripple_bg"
                android:paddingTop="@dimen/dp_20"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_65"
                android:button="@null"
                android:text="@string/menu_about"
                android:drawableTop="@drawable/main_tab_me_selector"
                android:layout_weight="1"/>
        </RadioGroup>
    </FrameLayout>
</RelativeLayout>
