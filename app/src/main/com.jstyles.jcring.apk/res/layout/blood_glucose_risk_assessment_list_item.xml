<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/blood_glucose_risk_assessment_list_item_lin"
        android:background="@drawable/bg_rect_msg_item_r20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15">
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/main_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/blood_sugar_test_result"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">
            <ImageView
                android:id="@+id/blood_glucose_risk_assessment_list_item_iv_icon"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_28"
                android:src="@mipmap/boold_sugar_result_icon_blue"/>
            <TextView
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                android:textColor="#588bf8"
                android:id="@+id/blood_glucose_risk_assessment_list_item_tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正常"
                android:layout_marginStart="@dimen/dp_12"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@color/msg_remark_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/blood_sugar_level"/>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@color/main_text_color"
            android:gravity="center"
            android:id="@+id/blood_glucose_risk_assessment_list_item_tv_range"
            android:background="@drawable/button_blue_r10"
            android:layout_width="@dimen/dp_190"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_7_5"
            android:text="@string/abnormal_data_fanwei"/>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@color/msg_remark_text_color"
            android:id="@+id/blood_glucose_risk_assessment_list_item_tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="禁食8小时"/>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@color/msg_remark_text_color"
            android:id="@+id/blood_glucose_risk_assessment_list_item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="测量于: 2022年09月03日 07:55"/>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@color/msg_remark_text_color"
            android:gravity="center"
            android:id="@+id/blood_glucose_risk_assessment_list_item_tv_remark1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_27"
            android:text="@string/blood_sugar_tip222"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"/>
    </LinearLayout>
</LinearLayout>
