<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/button_notify_rel"
    android:background="@drawable/bg_rect_msg_item_r20_center"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_55"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15">
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/main_text_color"
        android:id="@+id/button_notify_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.jstyles.jcring.views.ecg_stick_1791.SwitchButton
        android:id="@+id/switch1"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_23"
        android:layout_alignTop="@+id/button_notify_name"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_alignParentEnd="true"
        app:animate="false"
        app:borderWidth="@dimen/dp_0_3"
        app:offBorderColor="@android:color/darker_gray"
        app:offColor="#cccccc"
        app:onColor="@color/btn_bg"
        app:spotColor="@android:color/white"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/msg_remark_text_color"
        android:id="@+id/textView_notifytips"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14_5"
        android:layout_below="@+id/button_notify_name"
        android:layout_marginStart="@dimen/dp_21"
        android:layout_marginEnd="@dimen/dp_20"/>
    <View
        android:background="@color/lineitem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_19"
        app:layout_constraintStart_toStartOf="parent"/>
</RelativeLayout>
