<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_204"
        android:src="@mipmap/healthconnnect_pre_title"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>
    <TextView
        android:textSize="@dimen/sp_30"
        android:textColor="@color/main_text_color"
        android:id="@+id/Googlefit_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_60"
        android:text="@string/healthconnect_tip2"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"/>
    <TextView
        android:textSize="@dimen/sp_16"
        android:textColor="@color/main_text_color"
        android:id="@+id/Googlefit_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/healthconnect_tip3"
        android:layout_below="@+id/Googlefit_Title"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/google_fit_left"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:src="@mipmap/googlefit"
        android:adjustViewBounds="true"
        android:layout_above="@+id/buttonGoogleFit_yes"
        android:layout_below="@+id/Googlefit_info"
        android:layout_centerHorizontal="true"/>
    <Button
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:id="@+id/buttonGoogleFit_yes"
        android:background="@drawable/bg_rect_btn_bg_r10_ripple"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_80"
        android:text="@string/healthconnect_tip4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"/>
    <Button
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:id="@+id/buttonGoogleFit_no"
        android:background="@drawable/bg_rect_btn_bg_r10_bord"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_30"
        android:text="@string/healthconnect_tip5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"/>
</RelativeLayout>
