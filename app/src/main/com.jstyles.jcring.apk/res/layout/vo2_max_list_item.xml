<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/vo2max_item_lin_body"
    android:background="@drawable/bg_rect_msg_item_r20_ripple"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    android:elevation="@dimen/dp_1">
    <RelativeLayout
        android:id="@+id/vo2max_item_rel_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="#808080"
            android:id="@+id/vo2max_item_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01 Jan 2022   10 Readings"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"/>
        <ImageView
            android:visibility="invisible"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_8"
            android:src="@mipmap/sport_hisbottom_img"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/vo2max_item_lin_line"
        android:background="@color/line_bg_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vo2max_item_rv_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/vo2max_item_rv_no_data"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5">
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="#808080"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--:--"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="#808080"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="@string/ease_list_no_data_text"
            android:layout_marginStart="@dimen/dp_15"/>
    </LinearLayout>
</LinearLayout>
