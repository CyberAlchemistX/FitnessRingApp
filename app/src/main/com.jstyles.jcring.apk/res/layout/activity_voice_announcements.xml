<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_white_title"/>
    <RelativeLayout
        android:id="@+id/name_Rt"
        android:background="@drawable/bg_rect_msg_item_r20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/rl_title"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15">
        <com.jstyles.jcring.views.public_views.MultiplTextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/main_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voice_announcements"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_21"
            app:removeDefaultPadding="true"/>
        <com.jstyles.jcring.views.ecg_stick_1791.SwitchButton
            android:id="@+id/voice_switch"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_23"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_alignParentEnd="true"
            app:animate="true"
            app:borderWidth="@dimen/dp_0_3"
            app:offBorderColor="@android:color/darker_gray"
            app:offColor="#cccccc"
            app:onColor="@color/btn_bg"
            app:spotColor="@android:color/white"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/name_window"
        android:background="@drawable/bg_rect_msg_item_r20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/name_Rt"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15">
        <com.jstyles.jcring.views.public_views.MultiplTextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/main_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/window_light_setting"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_21"
            app:removeDefaultPadding="true"/>
        <com.jstyles.jcring.views.ecg_stick_1791.SwitchButton
            android:id="@+id/window_switch"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_23"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_alignParentEnd="true"
            app:animate="true"
            app:borderWidth="@dimen/dp_0_3"
            app:offBorderColor="@android:color/darker_gray"
            app:offColor="#cccccc"
            app:onColor="@color/btn_bg"
            app:spotColor="@android:color/white"/>
    </RelativeLayout>
</RelativeLayout>
