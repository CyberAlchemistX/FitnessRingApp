<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/dialog_mian"
    android:background="@drawable/bg_rect_msg_item_r10"
    android:layout_width="@dimen/dp_320"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/main_text_color"
        android:id="@+id/tv_content"
        android:paddingTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/device_bind_tip"
        android:paddingHorizontal="@dimen/dp_20"/>
    <TextView
        android:textSize="@dimen/sp_11"
        android:textColor="@color/f80"
        android:id="@+id/tv_content2"
        android:paddingTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/device_bind_warn"
        android:paddingHorizontal="@dimen/dp_20"/>
    <View
        android:background="@color/f80"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_15"/>
    <Button
        android:textSize="@dimen/sp_16"
        android:textColor="#ff4758"
        android:gravity="center"
        android:id="@+id/button_confim"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/device_start_unbind"/>
</LinearLayout>
