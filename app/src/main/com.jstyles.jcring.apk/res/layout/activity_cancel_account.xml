<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_msg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ok_Cancel_account"
        android:layout_below="@+id/rl_title">
        <ImageView
            android:id="@+id/img_wearing"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:layout_marginTop="@dimen/dp_45"
            android:src="@mipmap/wearing_2032"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="@dimen/sp_18"
            android:textColor="@color/main_text_color"
            android:id="@+id/Cancel_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="@string/Cancel_account_tip"
            android:includeFontPadding="false"
            android:layout_below="@+id/img_wearing"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_rect_msg_item_r20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_below="@+id/Cancel_account"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20">
                <com.jstyles.jcring.views.public_views.CircleColor
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_6"
                    app:round_circleColor="@color/btn_bg"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/main_text_color"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_tips0"
                    android:includeFontPadding="false"
                    android:layout_marginStart="@dimen/dp_4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12">
                <com.jstyles.jcring.views.public_views.CircleColor
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_6"
                    app:round_circleColor="@color/btn_bg"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/main_text_color"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_tips1"
                    android:includeFontPadding="false"
                    android:layout_marginStart="@dimen/dp_4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12">
                <com.jstyles.jcring.views.public_views.CircleColor
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_6"
                    app:round_circleColor="@color/btn_bg"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/main_text_color"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_tips2"
                    android:includeFontPadding="false"
                    android:layout_marginStart="@dimen/dp_4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12">
                <com.jstyles.jcring.views.public_views.CircleColor
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_6"
                    app:round_circleColor="@color/btn_bg"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/main_text_color"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_tips3"
                    android:includeFontPadding="false"
                    android:layout_marginStart="@dimen/dp_4"/>
            </LinearLayout>
            <View
                android:background="@color/lineitem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="#fc5656"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/Cancel_account_tips"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/dp_15"/>
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:textSize="@dimen/sp_16"
        android:textColor="@color/main_text_color"
        android:gravity="center"
        android:id="@+id/ok_Cancel_account"
        android:background="@drawable/button_red_r10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="@string/Cancel_account"
        android:includeFontPadding="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_19_5"
        android:layout_marginEnd="@dimen/dp_20"/>
</RelativeLayout>
