<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_msg"/>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/save"
        android:layout_below="@+id/rl_title">
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/msg_remark_text_color"
            android:id="@+id/Menstrual_infoset_tips1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:text="@string/Menstrual_infoset_tips1"
            android:includeFontPadding="false"
            android:layout_marginStart="@dimen/dp_25"/>
        <RelativeLayout
            android:id="@+id/startdateperiod_time_rt"
            android:background="@drawable/bg_rect_msg_item_r20_ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@+id/Menstrual_infoset_tips1"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/main_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/startdateperiod"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/lest_img1"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_11"
                android:src="@mipmap/lest_img"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/msg_remark_text_color"
                android:id="@+id/startdateperiod_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_toStartOf="@+id/lest_img1"/>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/msg_remark_text_color"
            android:id="@+id/Menstrual_infoset_tips2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:text="@string/Menstrual_infoset_tips2"
            android:includeFontPadding="false"
            android:layout_below="@+id/startdateperiod_time_rt"
            android:layout_marginStart="@dimen/dp_25"/>
        <RelativeLayout
            android:id="@+id/lengthperiod_rt"
            android:background="@drawable/bg_rect_msg_item_r20_ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@+id/Menstrual_infoset_tips2"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/main_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/lengthperiod"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/lest_img2"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_11"
                android:src="@mipmap/lest_img"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/msg_remark_text_color"
                android:id="@+id/lengthperiod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_toStartOf="@+id/lest_img2"/>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/msg_remark_text_color"
            android:id="@+id/Menstrual_infoset_tips3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:text="@string/Menstrual_infoset_tips3"
            android:includeFontPadding="false"
            android:layout_below="@+id/lengthperiod_rt"
            android:layout_marginStart="@dimen/dp_25"/>
        <RelativeLayout
            android:id="@+id/periodlength_rt"
            android:background="@drawable/bg_rect_msg_item_r20_ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@+id/Menstrual_infoset_tips3"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/main_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/periodlength"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/lest_img3"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_11"
                android:src="@mipmap/lest_img"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/msg_remark_text_color"
                android:id="@+id/periodlength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_toStartOf="@+id/lest_img3"/>
        </RelativeLayout>
    </RelativeLayout>
    <Button
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/save"
        android:background="@drawable/bg_rect_btn_bg_r10_ripple"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="@string/confirm"
        android:includeFontPadding="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_19_5"
        android:layout_marginEnd="@dimen/dp_20"/>
</RelativeLayout>
