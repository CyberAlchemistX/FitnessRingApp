<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_221"
            android:src="@mipmap/sleep_apnea_3"
            android:scaleType="centerCrop"
            android:importantForAccessibility="no"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_35">
            <include layout="@layout/layout_title"/>
        </LinearLayout>
    </RelativeLayout>
    <com.jstyles.jcring.views.ecg_stick_1791.MyNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_m_20"
        android:layout_above="@+id/next_step"
        android:layout_below="@+id/rt_title">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_rect_msg_item_r20_v2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_15">
                <View
                    android:id="@+id/view1"
                    android:background="@drawable/bg_sleep_apnea_tips1"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="match_parent"/>
                <View
                    android:background="@drawable/bg_sleep_apnea_tips_index1"
                    android:layout_width="@dimen/dp_235"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sleep_breath_22"
                    android:includeFontPadding="false"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_toEndOf="@+id/view1"/>
            </RelativeLayout>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="@string/sleep_breath_23"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_25"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:layout_marginStart="@dimen/dp_15">
                <View
                    android:id="@+id/view3"
                    android:background="@drawable/bg_sleep_apnea_tips2"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="match_parent"/>
                <View
                    android:background="@drawable/bg_sleep_apnea_tips_index2"
                    android:layout_width="@dimen/dp_235"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sleep_breath_24"
                    android:includeFontPadding="false"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_toEndOf="@+id/view3"/>
            </RelativeLayout>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="@string/sleep_breath_25"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_25"/>
        </LinearLayout>
    </com.jstyles.jcring.views.ecg_stick_1791.MyNestedScrollView>
    <Button
        android:textSize="@dimen/sp_18"
        android:textColor="@color/black"
        android:id="@+id/next_step"
        android:background="@drawable/bg_sleep_apnea_bottom"
        android:layout_width="@dimen/dp_226"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_35"
        android:text="@string/sleep_breath_26"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
