<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rect_msg_item_r20_ripple"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/sport_mian_rt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">
        <View
            android:id="@+id/nul_view"
            android:background="@color/msg_remark_text_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"/>
        <RelativeLayout
            android:id="@+id/check_mian_Rt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/nul_view">
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/main_text_color"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"/>
            <ImageView
                android:id="@+id/ischeck_img"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_8"
                android:src="@mipmap/sport_hisbottom_img"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_22"
                android:layout_alignParentEnd="true"
                app:tint="@color/msg_remark_text_color"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/title_rt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sport_mian_rt">
        <View
            android:id="@+id/null_view"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_centerInParent="true"/>
        <RelativeLayout
            android:id="@+id/sport_rt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toStartOf="@+id/null_view">
            <TextView
                android:textSize="@dimen/sp_13"
                android:textColor="@color/main_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sport_history_all_cout"
                android:includeFontPadding="false"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="#66111111"
                    android:layout_gravity="bottom"
                    android:id="@+id/sport_"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sport_"
                    android:includeFontPadding="false"/>
                <com.jstyles.jcring.views.public_views.FontView
                    android:textSize="@dimen/sp_25"
                    android:textColor="@color/main_text_color"
                    android:layout_gravity="bottom"
                    android:id="@+id/sport_cout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:includeFontPadding="false"
                    android:layout_marginEnd="@dimen/dp_8"
                    app:typeface="@string/universal_text_typeface"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/msg_remark_text_color"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ci"
                    android:includeFontPadding="false"/>
            </LinearLayout>
            <View
                android:background="@color/msg_remark_text_color"
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="@dimen/dp_36"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/distans_rt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toEndOf="@+id/null_view">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/main_text_color"
                android:id="@+id/sport_history_all_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sport_history_all_distance"
                android:includeFontPadding="false"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">
                <com.jstyles.jcring.views.public_views.FontView
                    android:textSize="@dimen/sp_25"
                    android:textColor="@color/main_text_color"
                    android:layout_gravity="bottom"
                    android:id="@+id/sport_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:includeFontPadding="false"
                    android:layout_marginEnd="@dimen/dp_8"
                    app:typeface="@string/universal_text_typeface"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/msg_remark_text_color"
                    android:layout_gravity="bottom"
                    android:id="@+id/sport_kaluli_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kilometre"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:background="#20000000"
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_above="@+id/steps_rt"
            android:layout_centerHorizontal="true"/>
        <View
            android:id="@+id/view_line"
            android:background="#20000000"
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_below="@+id/distans_rt"
            android:layout_centerHorizontal="true"/>
        <RelativeLayout
            android:id="@+id/steps_rt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_below="@+id/sport_rt"
            android:layout_toStartOf="@+id/null_view">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/main_text_color"
                android:id="@+id/sport_history_all_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sport_history_all_steps"
                android:includeFontPadding="false"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">
                <com.jstyles.jcring.views.public_views.FontView
                    android:textSize="@dimen/sp_25"
                    android:textColor="@color/main_text_color"
                    android:layout_gravity="bottom"
                    android:id="@+id/sport_history_all_steps_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:includeFontPadding="false"
                    android:layout_marginEnd="@dimen/dp_8"
                    app:typeface="@string/universal_text_typeface"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/msg_remark_text_color"
                    android:layout_gravity="bottom"
                    android:id="@+id/sport_history_all_steps_value_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Steps_unit"
                    android:includeFontPadding="false"/>
            </LinearLayout>
            <View
                android:background="@color/msg_remark_text_color"
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="@dimen/dp_36"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/kaluli_rt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_25"
            android:layout_below="@+id/distans_rt"
            android:layout_toEndOf="@+id/null_view">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/main_text_color"
                android:id="@+id/sport_history_all_kaluli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sport_history_all_kaluli"
                android:includeFontPadding="false"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">
                <com.jstyles.jcring.views.public_views.FontView
                    android:textSize="@dimen/sp_25"
                    android:textColor="@color/main_text_color"
                    android:layout_gravity="bottom"
                    android:id="@+id/sport_history_all_kaluli_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:includeFontPadding="false"
                    android:layout_marginEnd="@dimen/dp_8"
                    app:typeface="@string/universal_text_typeface"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/msg_remark_text_color"
                    android:layout_gravity="bottom"
                    android:id="@+id/sport_history_all_kaluli_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Kcal"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:background="@color/lineitem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_below="@+id/kaluli_rt"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sport_index_recyclerView"
        android:visibility="gone"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_below="@+id/title_rt"/>
</RelativeLayout>
