<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/login_iv_back"
            android:layout_width="@dimen/dp_23"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:src="@mipmap/login_back"
            android:adjustViewBounds="true"
            android:layout_marginStart="@dimen/dp_15"/>
        <TextView
            android:textSize="@dimen/sp_23"
            android:textColor="@color/main_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_35"
            android:text="@string/welcome"
            android:layout_marginStart="@dimen/dp_15"/>
        <TextView
            android:textSize="@dimen/sp_18"
            android:textColor="@color/main_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/login_app"
            android:layout_marginStart="@dimen/dp_15"/>
        <RelativeLayout
            android:orientation="vertical"
            android:background="@mipmap/login_content_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_340"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15">
            <ImageView
                android:id="@+id/login_iv_select_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/login_content_bg_phone"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:id="@+id/login_content_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_53">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/login_lin_phone"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="@dimen/sp_17"
                        android:textColor="@color/main_text_color"
                        android:id="@+id/login_rv_select_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_13"
                        android:text="@string/phone_login"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/login_lin_select_phone_line"
                        android:background="@drawable/bg_rect_btn_bg_r10"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_4"
                        android:layout_marginTop="@dimen/dp_5"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/login_lin_email"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="@dimen/sp_17"
                        android:textColor="@color/msg_remark_text_color"
                        android:id="@+id/login_rv_select_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_13"
                        android:text="@string/email_login"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/login_lin_select_email_line"
                        android:background="@drawable/bg_rect_btn_bg_r10"
                        android:visibility="invisible"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_4"
                        android:layout_marginTop="@dimen/dp_5"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/login_content_top">
                <TextView
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/main_text_color"
                    android:id="@+id/login_tv_account_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/account_phone"
                    android:layout_marginStart="@dimen/dp_20"/>
                <RelativeLayout
                    android:id="@+id/ll_input"
                    android:background="@drawable/login_input_bg_r10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_18"
                    android:layout_marginEnd="@dimen/dp_18">
                    <Button
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/main_text_color"
                        android:gravity="start|center_vertical"
                        android:id="@+id/bt_login_getCountryCode"
                        android:background="@null"
                        android:layout_width="@dimen/dp_65"
                        android:layout_height="@dimen/dp_50"
                        android:text="+86"
                        android:drawablePadding="@dimen/dp_5"
                        android:layout_centerVertical="true"
                        android:drawableStart="@mipmap/login_select_icon"
                        android:layout_marginStart="@dimen/dp_12"/>
                    <com.jstyles.jcring.views.EditTextWithDelete
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/main_text_color"
                        android:textColorHint="@color/msg_remark_text_color"
                        android:id="@+id/et_login_phonenumber"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:hint="@string/login_input_phone"
                        android:maxLines="1"
                        android:layout_alignParentTop="true"
                        android:textCursorDrawable="@null"
                        android:paddingStart="@dimen/dp_12"
                        android:layout_toEndOf="@+id/bt_login_getCountryCode"
                        android:importantForAutofill="no"/>
                </RelativeLayout>
                <TextView
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/main_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/password"
                    android:layout_marginStart="@dimen/dp_20"/>
                <RelativeLayout
                    android:id="@+id/ll_inputpass"
                    android:background="@drawable/login_input_bg_r10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_21"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_18"
                    android:layout_marginEnd="@dimen/dp_18">
                    <ImageView
                        android:gravity="center"
                        android:id="@+id/isshow_pass"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:layout_width="@dimen/dp_46"
                        android:layout_height="@dimen/dp_46"
                        android:button="@null"
                        android:src="@mipmap/pass_unshow"
                        android:adjustViewBounds="true"
                        android:layout_centerInParent="true"
                        android:paddingStart="@dimen/dp_13"
                        android:paddingEnd="@dimen/dp_13"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:layout_alignParentEnd="true"/>
                    <com.jstyles.jcring.views.EditTextWithDelete
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/main_text_color"
                        android:textColorHint="@color/msg_remark_text_color"
                        android:id="@+id/et_login_password"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:hint="@string/login_input_psd"
                        android:maxLines="1"
                        android:maxLength="16"
                        android:inputType="textPassword"
                        android:textCursorDrawable="@null"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:layout_toStartOf="@+id/isshow_pass"
                        android:importantForAutofill="no"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/msg_remark_text_color"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:id="@+id/checkbox_login"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:text="@string/login_rem_psd"
                        android:drawablePadding="@dimen/dp_5"
                        android:drawableStart="@drawable/check_remind_osd"
                        android:layout_marginStart="@dimen/dp_31"
                        android:layout_marginEnd="@dimen/dp_120"/>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/msg_remark_text_color"
                        android:id="@+id/tv_login_forgetpassword"
                        android:background="@drawable/ripple_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login_forget_psd"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp_31"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <Button
            android:textSize="@dimen/sp_17"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/bt_login_login"
            android:background="@drawable/bg_rect_btn_bg_r10_ripple"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/login_logins"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lingin_mian"
            app:layout_constraintWidth_default="percent"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
