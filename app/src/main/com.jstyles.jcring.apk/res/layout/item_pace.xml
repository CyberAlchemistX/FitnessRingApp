<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ConstraintLayout_pace"
    android:background="@drawable/bg_round_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_marginStart="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_8">
    <ProgressBar
        android:id="@+id/progressBar_pace"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_20"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/home_progressbar"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="8"
        app:layout_constraintLeft_toRightOf="@+id/bt_pace_count"
        app:layout_constraintRight_toLeftOf="@+id/space"
        style="?android:attr/progressBarStyleHorizontal"/>
    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/tv_pace_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6&apos;20&apos;&apos;"
        android:layout_marginEnd="@dimen/dp_8"
        app:layout_constraintRight_toRightOf="@+id/progressBar_pace"/>
    <Button
        android:textColor="@color/main_text_color"
        android:id="@+id/bt_pace_count"
        android:background="@android:color/transparent"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_20"
        android:text="1"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/progressBar_pace"/>
    <Space
        android:id="@+id/space"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/progressBar_pace"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
