<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/sp_24"
        android:textStyle="bold"
        android:textColor="@color/main_text_color"
        android:gravity="center"
        android:id="@+id/guide1_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_65"
        android:text="@string/splash_guide_tip1"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/msg_remark_text_color"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/guide1_tv_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8_2_5"
        android:text="@string/splash_guide_tip1_1"
        android:layout_below="@+id/guide1_tv_title"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"/>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/guide1_iv_image"
        android:layout_width="@dimen/dp_279"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_54"
        android:src="@mipmap/splash_ss1"
        android:adjustViewBounds="true"
        android:layout_below="@+id/guide1_tv_remark"
        android:layout_centerHorizontal="true"/>
    <Button
        android:textSize="@dimen/sp_17"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/guide1_btn_next"
        android:background="@drawable/bg_rect_btn_bg_r10_ripple"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginBottom="@dimen/dp_25"
        android:text="@string/next_step"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_35"
        android:layout_marginEnd="@dimen/dp_35"/>
</RelativeLayout>
