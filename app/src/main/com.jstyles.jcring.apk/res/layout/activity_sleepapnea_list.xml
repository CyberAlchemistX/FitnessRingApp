<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_221"
        android:src="@drawable/bg_overview_sleep"
        android:scaleType="centerCrop"
        android:importantForAccessibility="no"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/title_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35">
        <include layout="@layout/layout_title"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/notdata_rt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_below="@+id/title_ll">
        <ImageView
            android:id="@+id/sleep_apnea_15"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_200"
            android:src="@mipmap/sleep_apnea_15"
            android:layout_centerInParent="true"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="#50ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/Bloodsugar_nopg"
            android:layout_below="@+id/sleep_apnea_15"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_sleepapnea_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_below="@+id/title_ll"/>
</RelativeLayout>
