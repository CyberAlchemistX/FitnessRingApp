<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_white_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.jstyles.jcring.views.public_views.Vo2MaxCircleResult
            android:layout_gravity="center_horizontal"
            android:id="@+id/vo2max_result_circle_view"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_200"
            android:layout_marginTop="@dimen/dp_39"
            android:layout_centerHorizontal="true"/>
        <RelativeLayout
            android:background="@drawable/bg_rect_msg_item_r20"
            android:paddingTop="@dimen/dp_18"
            android:paddingBottom="@dimen/dp_23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_100"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15">
            <TextView
                android:textSize="@dimen/sp_40"
                android:textColor="@color/main_text_color"
                android:id="@+id/vo2max_result_tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.00"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/msg_remark_text_color"
                android:id="@+id/vo2max_result_tv_distance_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/distance_km_km"
                android:layout_below="@+id/vo2max_result_tv_distance"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_below="@+id/vo2max_result_tv_distance_unit">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="@dimen/sp_21"
                            android:textColor="@color/main_text_color"
                            android:id="@+id/vo2max_result_tv_step"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8000"/>
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/msg_remark_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="@string/Steps_unit"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="@dimen/sp_21"
                            android:textColor="@color/main_text_color"
                            android:id="@+id/vo2max_result_tv_times"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01:20:00"/>
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/msg_remark_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="@string/sport_time"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="@dimen/sp_21"
                            android:textColor="@color/main_text_color"
                            android:id="@+id/vo2max_result_tv_kcal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"/>
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/msg_remark_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="@string/kaluli"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="@dimen/sp_21"
                            android:textColor="@color/main_text_color"
                            android:id="@+id/vo2max_result_tv_burn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120"/>
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/msg_remark_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="@string/heart_ranzhi"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="@dimen/sp_21"
                            android:textColor="@color/main_text_color"
                            android:id="@+id/vo2max_result_tv_pace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8&apos;20&apos;&apos;"/>
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/msg_remark_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="@string/Pace"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="@dimen/sp_21"
                            android:textColor="@color/main_text_color"
                            android:id="@+id/vo2max_result_tv_spm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40"/>
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/msg_remark_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="@string/report_buping"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15">
            <Button
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/vo2max_btn_select"
                android:background="@drawable/button_purple_r10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_27"
                android:text="@string/history_title"
                android:layout_weight="1"
                android:elevation="@dimen/dp_1"/>
            <LinearLayout
                android:layout_width="@dimen/dp_5"
                android:layout_height="wrap_content"/>
            <Button
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/vo2max_btn_agin"
                android:background="@drawable/button_purple_r10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_27"
                android:text="@string/vo2_max_agin"
                android:layout_weight="1"
                android:elevation="@dimen/dp_1"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
