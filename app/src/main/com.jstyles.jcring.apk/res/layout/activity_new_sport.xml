<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginStart="@dimen/dp_5">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_back"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/login_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:textSize="@dimen/sp_22"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="start"
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/new_sport_str_1"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cl_set"
                app:layout_constraintStart_toEndOf="@+id/cl_back"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_set"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_new_port_set"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:id="@+id/tv_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/new_sport_str_2"
        android:drawablePadding="@dimen/dp_6"
        android:layout_marginStart="@dimen/dp_20"
        app:drawableEndCompat="@drawable/ic_new_sport_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_layout"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:id="@+id/cl_total_exercise"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginHorizontal="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_record">
        <TextView
            android:textSize="@dimen/sp_36"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/tv_total_exercise_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_constraintBottom_toTopOf="@+id/tv_total_exercise_text"
            app:layout_constraintEnd_toStartOf="@+id/tv_total_exercise_unit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white30"
            android:id="@+id/tv_total_exercise_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_sport_str_3"
            android:layout_marginStart="@dimen/dp_6"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_total_exercise_time"
            app:layout_constraintStart_toEndOf="@+id/tv_total_exercise_time"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white30"
            android:id="@+id/tv_total_exercise_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/new_sport_str_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/gl"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_exercise_time"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/gl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.5"/>
        <TextView
            android:textSize="@dimen/sp_36"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/tv_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_constraintBottom_toTopOf="@+id/tv_total_text"
            app:layout_constraintEnd_toStartOf="@+id/tv_total_unit"
            app:layout_constraintStart_toEndOf="@+id/gl"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white30"
            android:id="@+id/tv_total_unit"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_sport_str_4"
            android:layout_marginStart="@dimen/dp_6"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_total_time"
            app:layout_constraintStart_toEndOf="@+id/tv_total_time"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white30"
            android:id="@+id/tv_total_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/new_sport_str_6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/gl"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_time"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_total_exercise"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabIndicatorHeight="@dimen/dp_4"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextAppearance="@style/MyTabLayout"
        app:tabTextColor="@color/white30"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_no_map"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:src="@drawable/bg_new_sport_no_map"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout">
        <FrameLayout
            android:id="@+id/fl_map"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_target_set"
            android:visibility="gone"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:src="@drawable/bg_target_set"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_heart"
            android:background="@drawable/round_corner_bg"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:paddingHorizontal="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_heart"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/ic_new_sport_no_heart"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_hear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_marginStart="@dimen/dp_4"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_gps_layout"
            android:background="@drawable/round_corner_bg"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:paddingHorizontal="@dimen/dp_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="#80000000"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS"
                android:layout_marginStart="@dimen/dp_4"/>
            <View
                android:id="@+id/v_very_weak"
                android:background="#fb5067"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_5"/>
            <View
                android:id="@+id/v_weak"
                android:background="#20000000"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_5"/>
            <View
                android:id="@+id/v_medium"
                android:background="#20000000"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_5"/>
            <View
                android:id="@+id/v_strong"
                android:background="#20000000"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_5"/>
            <View
                android:id="@+id/v_very_strong"
                android:background="#20000000"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_5"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_set_target_mode"
            android:visibility="gone"
            android:layout_width="@dimen/dp_0"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/cl_bottom_op"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_heart">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/tv_mode_value"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed">
                <FrameLayout
                    android:id="@+id/iv_left"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_new_sport_modl_arrow_left"/>
                </FrameLayout>
                <TextView
                    android:textSize="@dimen/sp_21"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_sport_str_9"
                    android:layout_marginHorizontal="@dimen/dp_25"/>
                <FrameLayout
                    android:id="@+id/iv_right"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_new_sport_modl_arrow_right"/>
                </FrameLayout>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/sp_60"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/tv_mode_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_18"
                app:layout_constraintBottom_toTopOf="@+id/tv_mode_value_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_mode"/>
            <View
                android:id="@+id/tv_mode_value_line"
                android:background="@color/white30"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                app:layout_constraintBottom_toBottomOf="@+id/tv_unit"
                app:layout_constraintEnd_toEndOf="@+id/tv_mode_value"
                app:layout_constraintStart_toStartOf="@+id/tv_mode_value"
                app:layout_constraintTop_toBottomOf="@+id/tv_mode_value"/>
            <TextView
                android:textSize="@dimen/sp_18"
                android:textColor="@color/white50"
                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/new_sport_str_13"
                android:layout_marginHorizontal="@dimen/dp_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_mode_value_line"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_bottom_op"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_180"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_run_mode"
                android:background="@drawable/bg_stroke_white_r20"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_45"
                android:weightSum="2"
                android:layout_marginHorizontal="@dimen/dp_44"
                app:layout_constraintBottom_toTopOf="@+id/iv_go"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:id="@+id/tv_gps_run"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/new_sport_str_10"
                    android:layout_weight="1"/>
                <View
                    android:background="@drawable/bg_black_r20"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/tv_indoor_run"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/new_sport_str_11"
                    android:layout_weight="1"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:src="@drawable/ic_new_sport_go"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/fl_run"
                app:layout_constraintStart_toEndOf="@+id/fl_target"
                app:layout_constraintTop_toBottomOf="@+id/ll_run_mode"/>
            <FrameLayout
                android:id="@+id/fl_target"
                android:background="@drawable/bg_stroke_white_circle"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                app:layout_constraintBottom_toBottomOf="@+id/iv_go"
                app:layout_constraintEnd_toStartOf="@+id/iv_go"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_go">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_new_sport_target"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/fl_run"
                android:background="@drawable/bg_stroke_white_circle_stroke"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                app:layout_constraintBottom_toBottomOf="@+id/iv_go"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_go"
                app:layout_constraintTop_toTopOf="@+id/iv_go">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    android:id="@+id/iv_run"
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_26"/>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
