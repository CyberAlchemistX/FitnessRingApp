<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title"/>
    <RelativeLayout
        android:id="@+id/rt_1"
        android:background="@drawable/bg_rect_msg_item_r15_nostroke"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@+id/rl_title"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15">
        <View
            android:id="@+id/null_view"
            android:background="#707070"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"/>
        <RelativeLayout
            android:id="@+id/rt_1_m"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/null_view">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/touch_mode_tips33"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"/>
            <ImageView
                android:id="@+id/auto_sleep_ok"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/auto_sleep_ok"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rt_2_m"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/null_view">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/touch_mode_tips34"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"/>
            <ImageView
                android:id="@+id/auto_sleep_no"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/auto_sleep_no"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rt_2"
        android:background="@drawable/bg_rect_msg_item_r15_nostroke"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@+id/rt_1"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/touch_mode_tips35"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_20"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="#50ffffff"
            android:id="@+id/use_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/touch_mode_tips33"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_toStartOf="@+id/lest_img"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/lest_img"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_11"
            android:src="@mipmap/lest_img"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</RelativeLayout>
