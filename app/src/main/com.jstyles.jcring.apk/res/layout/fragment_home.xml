<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/RadioGroup_rt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        app:layout_collapseMode="parallax"
        app:layout_scrollFlags="snap|exitUntilCollapsed|scroll">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/add_device"
            android:background="@drawable/ripple_bg"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_22"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@mipmap/caldate"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_alignParentEnd="true"/>
        <com.jstyles.jcring.views.SyncView
            android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_10"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_toStartOf="@+id/add_device"/>
        <TextView
            android:textSize="@dimen/sp_22"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/health"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_20"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_gravity="top"
            android:orientation="vertical"
            android:id="@+id/NestedScrollView"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/health_top_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/msg_remark_text_color"
                        android:id="@+id/home_title_remark"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text=""
                        android:layout_marginStart="@dimen/dp_20"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/health_top_view_center"
                        android:paddingBottom="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_below="@+id/home_exercise_tv_top_title"
                        android:paddingStart="@dimen/dp_5"
                        android:paddingEnd="@dimen/dp_15"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15">
                        <TextView
                            android:textColor="@color/msg_remark_text_color"
                            android:id="@+id/health_tv_day_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:text=""/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:id="@+id/home_lin_tt1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="@dimen/dp_17"
                                    android:layout_height="@dimen/dp_17"
                                    android:src="@mipmap/home_chart_step"/>
                                <TextView
                                    android:textColor="@color/msg_remark_text_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/today_step_step"
                                    android:layout_marginStart="@dimen/dp_5"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="bottom"
                                android:orientation="horizontal"
                                android:id="@+id/home_lin_tt2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_7"
                                android:layout_below="@+id/home_lin_tt1">
                                <com.jstyles.jcring.views.FontAkkuratBoldView
                                    android:textSize="@dimen/sp_21"
                                    android:textColor="@color/main_text_color"
                                    android:id="@+id/steps"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:layout_marginStart="@dimen/dp_20"/>
                                <com.jstyles.jcring.views.FontAkkuratBoldView
                                    android:textSize="@dimen/sp_16"
                                    android:textColor="@color/msg_remark_text_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="/"/>
                                <com.jstyles.jcring.views.FontAkkuratBoldView
                                    android:textSize="@dimen/sp_16"
                                    android:textColor="@color/msg_remark_text_color"
                                    android:id="@+id/home_tv_step_taget"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:id="@+id/home_lin_tt3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_7"
                                android:layout_below="@+id/home_lin_tt2">
                                <ImageView
                                    android:layout_width="@dimen/dp_17"
                                    android:layout_height="@dimen/dp_17"
                                    android:src="@mipmap/home_chart_cal"/>
                                <TextView
                                    android:textColor="@color/msg_remark_text_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/calorie_kocl_kocl"
                                    android:layout_marginStart="@dimen/dp_5"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="bottom"
                                android:orientation="horizontal"
                                android:id="@+id/home_lin_tt4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_7"
                                android:layout_below="@+id/home_lin_tt3">
                                <com.jstyles.jcring.views.FontAkkuratBoldView
                                    android:textSize="@dimen/sp_21"
                                    android:textColor="@color/main_text_color"
                                    android:id="@+id/kaluli"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:layout_marginStart="@dimen/dp_20"/>
                                <com.jstyles.jcring.views.FontAkkuratBoldView
                                    android:textSize="@dimen/sp_16"
                                    android:textColor="@color/msg_remark_text_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="/"/>
                                <com.jstyles.jcring.views.FontAkkuratBoldView
                                    android:textSize="@dimen/sp_16"
                                    android:textColor="@color/msg_remark_text_color"
                                    android:id="@+id/home_tv_calorie_taget"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:id="@+id/home_lin_tt5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_7"
                                android:layout_below="@+id/home_lin_tt4">
                                <ImageView
                                    android:layout_width="@dimen/dp_17"
                                    android:layout_height="@dimen/dp_17"
                                    android:src="@mipmap/home_chart_distance"/>
                                <TextView
                                    android:textColor="@color/msg_remark_text_color"
                                    android:id="@+id/distance_tip_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/distance_km_km"
                                    android:layout_marginStart="@dimen/dp_5"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="bottom"
                                android:orientation="horizontal"
                                android:id="@+id/home_lin_tt6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_7"
                                android:layout_below="@+id/home_lin_tt5">
                                <com.jstyles.jcring.views.FontAkkuratBoldView
                                    android:textSize="@dimen/sp_21"
                                    android:textColor="@color/main_text_color"
                                    android:id="@+id/distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:layout_marginStart="@dimen/dp_20"/>
                                <com.jstyles.jcring.views.FontAkkuratBoldView
                                    android:textSize="@dimen/sp_16"
                                    android:textColor="@color/msg_remark_text_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="/"/>
                                <com.jstyles.jcring.views.FontAkkuratBoldView
                                    android:textSize="@dimen/sp_16"
                                    android:textColor="@color/msg_remark_text_color"
                                    android:id="@+id/home_tv_distance_taget"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"/>
                            </LinearLayout>
                            <com.jstyles.jcring.views.HealthTopFourView
                                android:id="@+id/home_health_second_view"
                                android:layout_width="@dimen/dp_140"
                                android:layout_height="@dimen/dp_140"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/dp_15"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/msg_remark_text_color"
                                android:id="@+id/lastdata_tv"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/last_data"/>
                            <TextView
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/msg_remark_text_color"
                                android:id="@+id/home_tv_today_title"
                                android:visibility="invisible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10/14"
                                android:layout_marginStart="@dimen/dp_8"
                                android:layout_toEndOf="@+id/lastdata_tv"/>
                            <TextView
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/msg_remark_text_color"
                                android:id="@+id/home_tv_set_mu"
                                android:paddingLeft="@dimen/dp_8"
                                android:paddingTop="@dimen/dp_4"
                                android:paddingRight="@dimen/dp_8"
                                android:paddingBottom="@dimen/dp_4"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/health_edit"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <TextView
                        android:textSize="@dimen/sp_21"
                        android:textStyle="bold"
                        android:textColor="@color/main_text_color_fan"
                        android:id="@+id/home_exercise_tv_top_title"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/health_data"
                        android:layout_marginStart="@dimen/dp_21"/>
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/main_text_color"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:text="@string/health"
                        android:layout_below="@+id/health_top_view_center"
                        android:layout_marginStart="@dimen/dp_21"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rc_rt"
                    android:paddingBottom="@dimen/dp_100"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/health_top_view">
                    <androidx.recyclerview.widget.RecyclerView
                        android:orientation="vertical"
                        android:id="@+id/healttab_MyNestedScrollView"
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/health_change_menu"
                        android:background="@drawable/bg_rect_msg_item_r20_ripple"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:layout_below="@+id/healttab_MyNestedScrollView"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/health_meun_change_icon"
                            android:adjustViewBounds="true"/>
                        <TextView
                            android:textSize="@dimen/sp_17"
                            android:textColor="@color/main_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/edit_ka"
                            android:layout_marginStart="@dimen/dp_10"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/main_text_color"
                        android:id="@+id/health_report"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:text="@string/manual_measurement"
                        android:includeFontPadding="false"
                        android:layout_below="@+id/health_change_menu"
                        android:layout_marginStart="@dimen/dp_20"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/health_report_rt"
                        android:background="@drawable/bg_rect_msg_item_r20"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_80"
                        android:layout_below="@+id/healttab_MyNestedScrollView"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:elevation="@dimen/dp_1">
                        <RelativeLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginStart="@dimen/dp_20">
                            <ImageView
                                android:id="@+id/health_item_iv_icon"
                                android:layout_width="@dimen/dp_33"
                                android:layout_height="@dimen/dp_33"
                                android:src="@mipmap/healthtab_16"/>
                            <TextView
                                android:textSize="@dimen/sp_16"
                                android:textStyle="bold"
                                android:textColor="@color/msg_remark_text_color"
                                android:id="@+id/health_item_tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/health_report"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/dp_7"
                                android:layout_marginEnd="@dimen/dp_5"
                                android:layout_toEndOf="@+id/health_item_iv_icon"/>
                            <com.jstyles.jcring.views.TestProgressButton
                                android:gravity="center"
                                android:id="@+id/test_progress_btn"
                                android:background="@drawable/bg_f7f7f7_r14"
                                android:paddingLeft="@dimen/dp_11"
                                android:paddingRight="@dimen/dp_11"
                                android:visibility="gone"
                                android:layout_width="@dimen/dp_110"
                                android:layout_height="@dimen/dp_32"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/dp_20"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/health_item_lin_type2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_marginBottom="@dimen/dp_20">
                            <TextView
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/msg_remark_text_color"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/health_all_pingfen"/>
                            <LinearLayout
                                android:gravity="bottom|center_horizontal"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10">
                                <com.jstyles.jcring.views.FontAkkuratBoldView
                                    android:textSize="@dimen/sp_24"
                                    android:textColor="@color/main_text_color"
                                    android:id="@+id/tv_healy_fen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:includeFontPadding="false"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/dp_17"/>
                                <TextView
                                    android:textSize="@dimen/sp_10"
                                    android:textColor="@color/msg_remark_text_color"
                                    android:id="@+id/vulue_tips"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/fen"
                                    android:layout_marginStart="@dimen/dp_2"/>
                            </LinearLayout>
                            <TextView
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/msg_remark_text_color"
                                android:id="@+id/tv_healy_fen_pin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text=""/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/main_text_color"
                        android:id="@+id/member_health"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:text="@string/chengyuan"
                        android:includeFontPadding="false"
                        android:layout_below="@+id/healttab_MyNestedScrollView"
                        android:layout_marginStart="@dimen/dp_20"/>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
        <com.jstyles.jcring.views.HealthDateChangeView
            android:id="@+id/health_date_change_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/health_date_change_view_lin_bg"
            android:background="@color/change_view_bg"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/health_date_change_view"/>
    </RelativeLayout>
</LinearLayout>
