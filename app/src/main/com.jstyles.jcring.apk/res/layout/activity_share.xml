<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/back"
        android:background="@drawable/ripple_bg_white_rect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/title_img"
            android:layout_width="@dimen/dp_8_5"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/back_title"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"/>
        <Button
            android:textSize="@dimen/sp_17"
            android:textColor="#111111"
            android:id="@+id/title_shezhi"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_yulan"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_toEndOf="@+id/title_img"/>
        <RelativeLayout
            android:id="@+id/iv_share"
            android:background="@drawable/ripple_bg"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_alignParentEnd="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/share_black"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:id="@+id/nestedScrollView_share"
        android:background="@android:color/white"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_weight="1">
        <RelativeLayout
            android:id="@+id/rrrr"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30_5"
                android:layout_centerHorizontal="true">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/applog"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_22"
                    android:src="@mipmap/applog"
                    android:scaleType="fitXY"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="#111111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/youhong_health"
                    android:includeFontPadding="false"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_7_5"
                    android:layout_toEndOf="@+id/applog"/>
            </RelativeLayout>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_29"
                android:includeFontPadding="false"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="#111111"
                android:id="@+id/this_hearttips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_29"
                android:text="@string/ri_health"
                android:includeFontPadding="false"
                android:layout_below="@+id/date"
                android:layout_centerHorizontal="true"/>
            <com.jstyles.jcring.views.public_views.MultiplTextView
                android:textSize="@dimen/sp_45"
                android:textColor="#006c62"
                android:gravity="center"
                android:id="@+id/heart_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_34_5"
                android:text="--"
                android:layout_below="@+id/this_hearttips"
                android:layout_centerHorizontal="true"
                app:removeDefaultPadding="true"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:id="@+id/bpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_11"
                android:text="@string/bpm"
                android:includeFontPadding="false"
                android:layout_below="@+id/heart_value"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:id="@+id/heart_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_below="@+id/bpm"
                android:layout_marginStart="@dimen/dp_17"
                android:layout_marginEnd="@dimen/dp_17">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <View
                        android:id="@+id/null_view1"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        android:layout_centerInParent="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/null_view1"
                        android:layout_centerHorizontal="true">
                        <TextView
                            android:textSize="@dimen/sp_18"
                            android:textColor="#111111"
                            android:gravity="bottom"
                            android:layout_gravity="bottom"
                            android:id="@+id/breathing_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:includeFontPadding="false"/>
                        <TextView
                            android:textSize="@dimen/sp_10"
                            android:textColor="#666666"
                            android:gravity="bottom"
                            android:layout_gravity="bottom"
                            android:id="@+id/heart_value_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bpm_ci"
                            android:includeFontPadding="false"
                            android:layout_marginStart="@dimen/dp_4"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="@dimen/sp_11"
                        android:textColor="#60111111"
                        android:id="@+id/heart_value_tips_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_9"
                        android:text="@string/acg_breathing"
                        android:includeFontPadding="false"
                        android:layout_below="@+id/null_view1"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <View
                    android:layout_gravity="center_vertical"
                    android:background="#e4e4e4"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_37"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <View
                        android:id="@+id/null_view2"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        android:layout_centerInParent="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/null_view2"
                        android:layout_centerHorizontal="true">
                        <TextView
                            android:textSize="@dimen/sp_18"
                            android:textColor="#111111"
                            android:gravity="bottom"
                            android:layout_gravity="bottom"
                            android:id="@+id/heart_max_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:includeFontPadding="false"/>
                        <TextView
                            android:textSize="@dimen/sp_10"
                            android:textColor="#666666"
                            android:gravity="bottom"
                            android:layout_gravity="bottom"
                            android:id="@+id/heart_max_value_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bpm"
                            android:includeFontPadding="false"
                            android:layout_marginStart="@dimen/dp_4"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="@dimen/sp_11"
                        android:textColor="#60111111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_9"
                        android:text="@string/max_heartrate"
                        android:includeFontPadding="false"
                        android:layout_below="@+id/null_view2"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <View
                        android:id="@+id/null_view3"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        android:layout_centerInParent="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/null_view3"
                        android:layout_centerHorizontal="true">
                        <TextView
                            android:textSize="@dimen/sp_18"
                            android:textColor="#111111"
                            android:gravity="bottom"
                            android:layout_gravity="bottom"
                            android:id="@+id/heart_min_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:includeFontPadding="false"/>
                        <TextView
                            android:textSize="@dimen/sp_10"
                            android:textColor="#666666"
                            android:gravity="bottom"
                            android:layout_gravity="bottom"
                            android:id="@+id/heart_min_value_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bpm"
                            android:includeFontPadding="false"
                            android:layout_marginStart="@dimen/dp_4"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="@dimen/sp_11"
                        android:textColor="#60111111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_9"
                        android:text="@string/min_heartrate"
                        android:includeFontPadding="false"
                        android:layout_below="@+id/null_view3"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/else_rr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_below="@+id/heart_ll">
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="#666666"
                        android:id="@+id/acg_heart_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/acg_heart_tips"
                        android:includeFontPadding="false"/>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="#666666"
                        android:id="@+id/acg_heart_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_marginStart="@dimen/dp_7"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="#666666"
                        android:id="@+id/physical_fatigue_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/physical_fatigue_tips"
                        android:includeFontPadding="false"/>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="#666666"
                        android:id="@+id/physical_fatigue_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_marginStart="@dimen/dp_7"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_below="@+id/else_rr">
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="#666666"
                        android:id="@+id/mental_pressure_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mental_pressure_tips"
                        android:includeFontPadding="false"/>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="#666666"
                        android:id="@+id/excited_index_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_marginStart="@dimen/dp_7"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="#666666"
                        android:id="@+id/heartrate_variability_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/excited_index_tips"
                        android:includeFontPadding="false"/>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="#666666"
                        android:id="@+id/heartrate_variability_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_marginStart="@dimen/dp_7"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:background="@mipmap/share_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_400"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_below="@+id/else_rr"
                android:layout_alignParentBottom="true">
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@android:color/white"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_32"
                    android:includeFontPadding="false"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/user_img"
                    android:background="@drawable/ripple_bg"
                    android:layout_width="@dimen/dp_31"
                    android:layout_height="@dimen/dp_31"
                    android:layout_marginBottom="@dimen/dp_4_5"
                    android:src="@drawable/user_img"
                    android:scaleType="fitXY"
                    android:layout_above="@+id/name"
                    android:layout_centerHorizontal="true"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_43"
                    android:layout_marginBottom="@dimen/dp_13"
                    android:src="@mipmap/share_dian"
                    android:scaleType="fitXY"
                    android:layout_above="@+id/user_img"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
