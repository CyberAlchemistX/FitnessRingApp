<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_white_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.amap.api.maps.MapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <fragment
            android:id="@+id/google_mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.SupportMapFragment"/>
        <androidx.core.widget.NestedScrollView
            android:orientation="vertical"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/main_bg_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.jstyles.jcring.views.public_views.Vo2MaxCircleProgressTips
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/vo2max_progress"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_200"
                    android:layout_marginTop="@dimen/dp_20"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20">
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/vo2max_lin_tip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/sp_18"
                            android:textColor="@color/main_text_color"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vo2max_measure_title"
                            android:includeFontPadding="false"/>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginStart="@dimen/dp_45"
                            android:layout_marginEnd="@dimen/dp_45">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/gps_img"
                                android:layout_width="@dimen/dp_14"
                                android:layout_height="@dimen/dp_14"
                                android:src="@drawable/vo2_max_gps_update"
                                android:scaleType="fitXY"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/dp_4_5"
                                android:layout_marginEnd="@dimen/dp_17_5"
                                android:layout_toEndOf="@+id/gps"/>
                            <TextView
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/msg_remark_text_color"
                                android:id="@+id/test_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/vo2_max_start_tip"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_25"
                            android:layout_marginStart="@dimen/dp_45"
                            android:layout_marginEnd="@dimen/dp_45">
                            <TextView
                                android:textSize="@dimen/sp_10"
                                android:textColor="@android:color/white"
                                android:gravity="center"
                                android:id="@+id/cicle_1"
                                android:background="@drawable/cicle_2032"
                                android:layout_width="@dimen/dp_22"
                                android:layout_height="@dimen/dp_22"
                                android:text="1"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/msg_remark_text_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/vo2max_tips1"
                                android:includeFontPadding="false"
                                android:layout_marginStart="@dimen/dp_15"
                                android:layout_toEndOf="@+id/cicle_1"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginStart="@dimen/dp_45"
                            android:layout_marginEnd="@dimen/dp_45">
                            <TextView
                                android:textSize="@dimen/sp_10"
                                android:textColor="@android:color/white"
                                android:gravity="center"
                                android:id="@+id/cicle_2"
                                android:background="@drawable/cicle_2032"
                                android:layout_width="@dimen/dp_22"
                                android:layout_height="@dimen/dp_22"
                                android:text="2"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/msg_remark_text_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/vo2max_tips2"
                                android:includeFontPadding="false"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/dp_15"
                                android:layout_toEndOf="@+id/cicle_2"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginStart="@dimen/dp_45"
                            android:layout_marginEnd="@dimen/dp_45">
                            <TextView
                                android:textSize="@dimen/sp_10"
                                android:textColor="@android:color/white"
                                android:gravity="center"
                                android:id="@+id/cicle_3"
                                android:background="@drawable/cicle_2032"
                                android:layout_width="@dimen/dp_22"
                                android:layout_height="@dimen/dp_22"
                                android:text="3"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/msg_remark_text_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/vo2max_tips3"
                                android:includeFontPadding="false"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/dp_15"
                                android:layout_toEndOf="@+id/cicle_3"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/vo2max_rel_progress"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp_80">
                        <TextView
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold"
                            android:textColor="@color/msg_remark_text_color"
                            android:id="@+id/vo2max_tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_30"
                            android:text="@string/get_ready_to_work"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:textSize="@dimen/sp_36"
                            android:textColor="@color/msg_remark_text_color"
                            android:id="@+id/vo2max_tv_times"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_70"
                            android:text="3"
                            android:layout_centerHorizontal="true"/>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_rect_msg_item_r20_ripple"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_90"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/dp_15"
                            android:layout_marginEnd="@dimen/dp_15"
                            android:elevation="@dimen/dp_1">
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="gone"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:textSize="@dimen/sp_21"
                                    android:textColor="@color/main_text_color"
                                    android:id="@+id/day_avg_temp_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"/>
                                <TextView
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="@color/msg_remark_text_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:text="@string/day_avg_temp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:background="@color/home_detail_line_bg"
                                android:visibility="gone"
                                android:layout_width="@dimen/dp_0_5"
                                android:layout_height="@dimen/dp_40"/>
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:textSize="@dimen/sp_30"
                                    android:textColor="@color/main_text_color"
                                    android:id="@+id/day_min_temp_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"/>
                                <TextView
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="@color/msg_remark_text_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:text="@string/heart_shishi"/>
                            </LinearLayout>
                            <LinearLayout
                                android:background="@color/home_detail_line_bg"
                                android:layout_width="@dimen/dp_0_5"
                                android:layout_height="@dimen/dp_40"/>
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:textSize="@dimen/sp_30"
                                    android:textColor="@color/main_text_color"
                                    android:id="@+id/day_max_temp_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"/>
                                <TextView
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="@color/msg_remark_text_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:text="@string/Pace"/>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <Button
            android:textSize="@dimen/sp_16"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@+id/next_step"
            android:background="@drawable/button_blue_r10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="@string/start_yuga"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_33"
            android:layout_marginEnd="@dimen/dp_33"
            android:elevation="@dimen/dp_1"/>
    </RelativeLayout>
</LinearLayout>
