<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_rect_msg_item_r20_center_ripple"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/msg_remark_text_color"
        android:id="@+id/title"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="aaaaaaaaaaa"
        android:includeFontPadding="false"
        android:layout_marginStart="@dimen/dp_20"/>
    <RelativeLayout
        android:id="@+id/centen_rt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:layout_below="@+id/title">
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaaaaaaaaa"
            android:includeFontPadding="false"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_25"/>
        <RelativeLayout
            android:id="@+id/check_rt"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_alignParentEnd="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/devices_type_right"
                android:background="@mipmap/health_edit_no"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/line"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/name"
            android:layout_alignEnd="@+id/check_rt"
            style="@style/linemsgsetting"/>
    </RelativeLayout>
    <View
        android:id="@+id/other_view"
        android:background="@color/me_info_msg_item_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:layout_below="@+id/centen_rt"/>
</RelativeLayout>
