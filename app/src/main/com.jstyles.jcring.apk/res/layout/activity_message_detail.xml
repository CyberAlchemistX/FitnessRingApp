<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_msg"/>
    <androidx.core.widget.NestedScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/rl_title">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/sp_18"
                android:textColor="@color/main_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/report_buping"
                android:layout_marginStart="@dimen/dp_30"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_130"
                android:layout_marginTop="@dimen/dp_10_5"
                android:layout_marginBottom="@dimen/dp_10_5"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_30">
                <lecho.lib.hellocharts.view.ColumnChartView
                    android:id="@+id/msg_detail_chart"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_130"/>
                <TextView
                    android:textSize="@dimen/sp_8"
                    android:textColor="@color/msg_remark_text_color"
                    android:id="@+id/msg_detail_tv_sport_start_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="13:00"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dp_5"/>
                <TextView
                    android:textSize="@dimen/sp_8"
                    android:textColor="@color/msg_remark_text_color"
                    android:id="@+id/msg_detail_tv_sport_end_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="13:00"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_30">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/dp_17"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/msg_detiail_time"
                        android:adjustViewBounds="true"/>
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/main_text_color"
                        android:id="@+id/msg_detail_tv_sport_durtion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginStart="@dimen/dp_7"/>
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/main_text_color"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/m_string_r1"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_75">
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/msg_detiail_bupin"
                        android:adjustViewBounds="true"/>
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/main_text_color"
                        android:id="@+id/msg_detail_tv_sport_avg_hr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginStart="@dimen/dp_7"/>
                    <TextView
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/main_text_color"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_1"
                        android:text="@string/s_m"
                        android:layout_marginStart="@dimen/dp_5"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_rect_msg_item_r20"
                android:padding="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/main_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_sport_model"/>
                <RelativeLayout
                    android:id="@+id/msg_detail_rel_sport_model_select"
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10">
                    <ImageView
                        android:id="@+id/msg_detail_iv_sport_model"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@mipmap/msg_detiail_sport1"/>
                    <ImageView
                        android:id="@+id/msg_detail_iv_sport_right"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/right_arrow"
                        android:adjustViewBounds="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/main_text_color"
                        android:id="@+id/msg_detail_tv_sport_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sport_index_1"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_toEndOf="@+id/msg_detail_iv_sport_model"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_rect_msg_item_r20"
                android:padding="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/main_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Sit_Reminder_StartTime"/>
                    <TextView
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/main_text_color"
                        android:id="@+id/msg_detail_tv_sport_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--:--"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:background="@color/white30"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_10"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/main_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Sit_ReminderEndTime"/>
                    <TextView
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/main_text_color"
                        android:id="@+id/msg_detail_tv_sport_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--:--"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:orientation="vertical"
                android:id="@+id/msg_detail_rel_dissociation"
                android:background="@drawable/bg_rect_msg_item_r20"
                android:padding="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/main_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sport_model_dissociation"/>
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/main_text_color"
                    android:id="@+id/msg_detail_tv_sport_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sport_model_dissociation_1"
                    android:layout_marginEnd="@dimen/dp_7"
                    android:layout_toStartOf="@+id/msg_detail_iv_sport_right1"/>
                <ImageView
                    android:id="@+id/msg_detail_iv_sport_right1"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_arrow"
                    android:adjustViewBounds="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <Button
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:id="@+id/time_ok"
                android:background="@drawable/bg_rect_btn_bg_r10_ripple"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="@string/ok"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_30"/>
            <TextView
                android:textSize="@dimen/sp_18"
                android:textColor="#ba3a3a"
                android:gravity="center"
                android:id="@+id/msg_detail_tv_delete"
                android:background="@drawable/bg_rect_red_bg_r10"
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/delete_sport_data"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_30"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
