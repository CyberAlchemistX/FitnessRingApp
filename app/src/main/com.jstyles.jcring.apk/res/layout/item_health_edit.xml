<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/health_edit_item_rel"
    android:background="@drawable/bg_rect_msg_item_r20_center"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_55">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/health_edit"
        android:background="@mipmap/health_edit"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_12"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_14_5"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/main_text_color"
        android:id="@+id/edit_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_7_5"
        android:layout_toEndOf="@+id/health_edit"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/health_isshow"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_alignParentEnd="true"/>
    <View
        android:id="@+id/health_edit_item_line"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_alignStart="@+id/edit_type"
        style="@style/lineitem"/>
</RelativeLayout>
