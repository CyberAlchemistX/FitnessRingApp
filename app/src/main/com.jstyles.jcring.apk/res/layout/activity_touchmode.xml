<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title"/>
    <androidx.core.widget.NestedScrollView
        android:orientation="vertical"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/setting_new4_rel_auto"
                android:background="@drawable/bg_rect_msg_item_r15_nostroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:elevation="@dimen/dp_1">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/main_text_color"
                    android:id="@+id/touch_mode_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/touch_mode_tips"
                    android:includeFontPadding="false"
                    android:layout_marginStart="@dimen/dp_18"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="#50ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="@string/touch_mode_tips1"
                    android:includeFontPadding="false"
                    android:layout_below="@+id/touch_mode_tips"
                    android:layout_marginStart="@dimen/dp_18"/>
                <com.jstyles.jcring.views.ecg_stick_1791.SwitchButton_Small
                    android:id="@+id/touch_switch_1"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_26"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    app:animate="true"
                    app:borderWidth="@dimen/dp_0_3"
                    app:offBorderColor="#414141"
                    app:offColor="#414141"
                    app:onColor="@color/btn_bg"
                    app:spotColor="@android:color/white"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/setting_new4_rel_target"
                android:background="@drawable/bg_rect_msg_item_r15_nostroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:elevation="@dimen/dp_1">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/touch_img0"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginTop="@dimen/dp_15"
                    android:src="@mipmap/touch_img0"
                    android:scaleType="fitXY"
                    android:layout_marginStart="@dimen/dp_18"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/main_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="@string/touch_mode_tips2"
                    android:includeFontPadding="false"
                    android:layout_alignTop="@+id/touch_img0"
                    android:layout_marginStart="@dimen/dp_2"
                    android:layout_toEndOf="@+id/touch_img0"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="#50ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="@string/touch_mode_tips3"
                    android:includeFontPadding="false"
                    android:layout_below="@+id/touch_img0"
                    android:layout_marginStart="@dimen/dp_18"/>
                <com.jstyles.jcring.views.ecg_stick_1791.SwitchButton_Small
                    android:id="@+id/touch_switch_2"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_26"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    app:animate="true"
                    app:borderWidth="@dimen/dp_0_3"
                    app:offBorderColor="#414141"
                    app:offColor="#414141"
                    app:onColor="@color/btn_bg"
                    app:spotColor="@android:color/white"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/setting_new4_rel_reset"
                android:background="@drawable/bg_rect_msg_item_r15_nostroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:elevation="@dimen/dp_1">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/touch_img1"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginTop="@dimen/dp_15"
                    android:src="@mipmap/touch_img1"
                    android:scaleType="fitXY"
                    android:layout_marginStart="@dimen/dp_18"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/main_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="@string/touch_mode_tips4"
                    android:includeFontPadding="false"
                    android:layout_alignTop="@+id/touch_img1"
                    android:layout_marginStart="@dimen/dp_2"
                    android:layout_toEndOf="@+id/touch_img1"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="#50ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="@string/touch_mode_tips5"
                    android:includeFontPadding="false"
                    android:layout_below="@+id/touch_img1"
                    android:layout_marginStart="@dimen/dp_18"/>
                <com.jstyles.jcring.views.ecg_stick_1791.SwitchButton_Small
                    android:id="@+id/touch_switch_3"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_26"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    app:animate="true"
                    app:borderWidth="@dimen/dp_0_3"
                    app:offBorderColor="#414141"
                    app:offColor="#414141"
                    app:onColor="@color/btn_bg"
                    app:spotColor="@android:color/white"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lighting_indicator_rt"
                android:background="@drawable/bg_rect_msg_item_r15_nostroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:elevation="@dimen/dp_1">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/touch_img2"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginTop="@dimen/dp_15"
                    android:src="@mipmap/touch_img2"
                    android:scaleType="fitXY"
                    android:layout_marginStart="@dimen/dp_18"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/main_text_color"
                    android:id="@+id/touch_mode_tips6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="@string/touch_mode_tips6"
                    android:includeFontPadding="false"
                    android:layout_alignTop="@+id/touch_img2"
                    android:layout_marginStart="@dimen/dp_2"
                    android:layout_toEndOf="@+id/touch_img2"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="#50ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="@string/touch_mode_tips7"
                    android:includeFontPadding="false"
                    android:layout_below="@+id/touch_mode_tips6"
                    android:layout_marginStart="@dimen/dp_18"/>
                <com.jstyles.jcring.views.ecg_stick_1791.SwitchButton_Small
                    android:id="@+id/touch_switch_4"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_26"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    app:animate="true"
                    app:borderWidth="@dimen/dp_0_3"
                    app:offBorderColor="#414141"
                    app:offColor="#414141"
                    app:onColor="@color/btn_bg"
                    app:spotColor="@android:color/white"/>
            </RelativeLayout>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="#50ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/sport_tt6"
                android:includeFontPadding="false"
                android:layout_below="@+id/touch_img2"
                android:layout_marginStart="@dimen/dp_18"/>
            <RelativeLayout
                android:id="@+id/touch_mode_tips8_rt"
                android:background="@drawable/bg_rect_msg_item_r10_color1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15">
                <View
                    android:id="@+id/null_4"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/touch_img3"
                    android:layout_width="@dimen/dp_29"
                    android:layout_height="@dimen/dp_29"
                    android:src="@mipmap/touch_img3"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_alignParentEnd="true"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/main_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="@string/touch_mode_tips8"
                    android:includeFontPadding="false"
                    android:layout_above="@+id/null_4"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_2"
                    android:layout_toStartOf="@+id/touch_img3"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="#50ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="@string/touch_mode_tips9"
                    android:includeFontPadding="false"
                    android:layout_below="@+id/null_4"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_2"
                    android:layout_toStartOf="@+id/touch_img3"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/touch_mode_tips10_rt"
                android:background="@drawable/bg_rect_msg_item_r10_color2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15">
                <View
                    android:id="@+id/null_5"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/touch_img4"
                    android:layout_width="@dimen/dp_29"
                    android:layout_height="@dimen/dp_29"
                    android:src="@mipmap/touch_img4"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_alignParentEnd="true"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/main_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="@string/touch_mode_tips10"
                    android:includeFontPadding="false"
                    android:layout_above="@+id/null_5"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_2"
                    android:layout_toStartOf="@+id/touch_img4"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="#50ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="@string/touch_mode_tips11"
                    android:includeFontPadding="false"
                    android:layout_below="@+id/null_5"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_2"
                    android:layout_toStartOf="@+id/touch_img4"
                    android:layout_alignParentStart="true"/>
                <ImageView
                    android:id="@+id/touch_img5"
                    android:layout_width="@dimen/dp_29"
                    android:layout_height="@dimen/dp_29"
                    android:src="@mipmap/touch_img4"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
