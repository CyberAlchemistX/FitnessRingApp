<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_mian"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/bg_rect_msg_item_r10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20">
        <TextView
            android:textSize="@dimen/sp_17"
            android:textStyle="bold"
            android:textColor="@color/main_text_color"
            android:gravity="center_horizontal"
            android:id="@+id/ble_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/low_power"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/ble_status_img"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_88"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30"
            android:src="@mipmap/battery_low"
            android:scaleType="fitXY"
            android:layout_below="@+id/ble_tips"
            android:layout_centerInParent="true"/>
        <Button
            android:textSize="@dimen/sp_16"
            android:textColor="@android:color/white"
            android:id="@+id/ble_status_ok"
            android:background="@drawable/bg_rect_btn_bg_r10_ripple"
            android:layout_width="@dimen/dp_228"
            android:layout_height="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="@string/ok"
            android:layout_below="@+id/ble_status_img"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
