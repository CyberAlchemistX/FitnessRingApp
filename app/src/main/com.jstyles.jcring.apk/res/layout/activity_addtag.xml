<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_msg"/>
    <RelativeLayout
        android:id="@+id/tag_seach_img_rt"
        android:background="@drawable/bg_tag_input"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@+id/rl_title"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20">
        <ImageView
            android:id="@+id/tag_seach_img"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/tag_seach_img"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"/>
        <EditText
            android:textSize="@dimen/sp_14"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/smssdk_search"
            android:maxLines="1"
            android:textCursorDrawable="@null"
            android:paddingStart="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@+id/tag_seach_img"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Set_tag_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/next_step"
        android:layout_below="@+id/tag_seach_img_rt"/>
    <Button
        android:textSize="@dimen/sp_16"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/next_step"
        android:background="@drawable/ripple_bg_raund_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_35"
        android:text="@string/next_step"
        android:includeFontPadding="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_35"
        android:layout_marginEnd="@dimen/dp_35"/>
</RelativeLayout>
