<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_white_title"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/sp_32"
                android:textStyle="bold"
                android:textColor="@color/main_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/visitor_info_tip1"
                android:layout_marginStart="@dimen/dp_35"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/main_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7_5"
                android:text="@string/visitor_info_tip2"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginEnd="@dimen/dp_35"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/msg_remark_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7_5"
                android:text="@string/visitor_info_tip3"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginEnd="@dimen/dp_35"/>
            <RelativeLayout
                android:id="@+id/birth_Rt"
                android:background="@drawable/ripple_bg_raund8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_25">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/main_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/birth"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/lest_img2"
                    android:visibility="invisible"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_11"
                    android:src="@mipmap/lest_img"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_14"
                    android:layout_alignParentEnd="true"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/msg_remark_text_color"
                    android:id="@+id/birth_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selected_index"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/lest_img2"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/sex_Rt"
                android:background="@drawable/ripple_bg_raund8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_25">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/main_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sex"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/lest_img1"
                    android:visibility="invisible"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_11"
                    android:src="@mipmap/lest_img"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_14"
                    android:layout_alignParentEnd="true"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/msg_remark_text_color"
                    android:id="@+id/sex_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selected_index"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/lest_img1"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/height_Rt"
                android:background="@drawable/ripple_bg_raund8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_25">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/main_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/height"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/lest_img3"
                    android:visibility="invisible"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_11"
                    android:src="@mipmap/lest_img"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_14"
                    android:layout_alignParentEnd="true"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/msg_remark_text_color"
                    android:id="@+id/height_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selected_index"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/lest_img3"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/weight_Rt"
                android:background="@drawable/ripple_bg_raund8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_25">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/main_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weight"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/lest_img4"
                    android:visibility="invisible"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_11"
                    android:src="@mipmap/lest_img"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_14"
                    android:layout_alignParentEnd="true"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/msg_remark_text_color"
                    android:id="@+id/weight_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selected_index"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/lest_img4"/>
            </RelativeLayout>
            <Button
                android:textSize="@dimen/sp_16"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/next_step"
                android:background="@drawable/ripple_bg_raund_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_40"
                android:text="@string/next_step"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginEnd="@dimen/dp_35"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/msg_remark_text_color"
                android:gravity="center"
                android:id="@+id/visitor_info_tv_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="@string/visitor_info_tip4"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginEnd="@dimen/dp_35"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
