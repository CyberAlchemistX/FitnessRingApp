<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/devices_item_rel_connect"
        android:background="@drawable/bg_rect_msg_item_r20_ripple"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_175"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_ioc1"
            android:layout_width="@dimen/dp_133"
            android:layout_height="@dimen/dp_126"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_4"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/img_ioc1">
            <TextView
                android:textSize="@dimen/sp_18"
                android:textColor="@color/main_text_color"
                android:id="@+id/devices_item_tv_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2206-E52CA7"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15">
                <com.jstyles.jcring.views.BatteryView
                    android:id="@+id/devices_item_battery_view"
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_10"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/main_text_color"
                    android:id="@+id/devices_item_tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60%"
                    android:layout_marginStart="@dimen/dp_5"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/main_text_color"
                    android:id="@+id/devices_item_tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22:33:44:55:D6:F7"
                    android:layout_marginStart="@dimen/dp_10"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15">
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/main_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gujian_version"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/msg_remark_text_color"
                    android:id="@+id/devices_item_tv_firmware_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V2.9.7.1"
                    android:layout_marginStart="@dimen/dp_10"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/device_item_icon1"
                    android:adjustViewBounds="true"/>
                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/device_item_icon2"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="@dimen/dp_7_5"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/main_text_color"
                    android:id="@+id/devices_item_tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginStart="@dimen/dp_10"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/main_text_color_fan"
                    android:gravity="center"
                    android:id="@+id/devices_item_tv_un_connect"
                    android:background="@drawable/button_blue_r10"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/devices_unbind"
                    android:paddingStart="@dimen/dp_9"
                    android:paddingEnd="@dimen/dp_9"
                    android:layout_marginStart="@dimen/dp_10"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/devices_item_rel_un_connect"
        android:background="@drawable/bg_rect_msg_select_item_r20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_133"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_ioc2"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_96"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_4"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/img_ioc2">
            <TextView
                android:textSize="@dimen/sp_18"
                android:textColor="@color/msg_remark_text_color"
                android:id="@+id/devices_item_tv_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2206-E52CA7"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_29">
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/main_text_color_fan"
                    android:id="@+id/devices_item_tv_connect"
                    android:background="@drawable/button_green_r10"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/connect"
                    android:paddingStart="@dimen/dp_9"
                    android:paddingEnd="@dimen/dp_9"
                    android:layout_marginStart="@dimen/dp_15"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/main_text_color_fan"
                    android:gravity="center"
                    android:id="@+id/devices_item_tv_un_connect1"
                    android:background="@drawable/button_blue_r10"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/devices_unbind"
                    android:paddingStart="@dimen/dp_9"
                    android:paddingEnd="@dimen/dp_9"
                    android:layout_marginStart="@dimen/dp_10"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
