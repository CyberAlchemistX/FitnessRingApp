<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_white_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:textSize="@dimen/sp_16"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@+id/next_step"
            android:background="@drawable/button_blue_r10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginBottom="@dimen/dp_27"
            android:text="@string/next_step"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_33"
            android:layout_marginEnd="@dimen/dp_33"/>
        <androidx.core.widget.NestedScrollView
            android:orientation="vertical"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_above="@+id/next_step">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.jstyles.jcring.views.public_views.BloodsugarCircleProgressTips
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_200"
                    android:layout_marginTop="@dimen/dp_39"/>
                <TextView
                    android:textSize="@dimen/sp_21"
                    android:textColor="@color/main_text_color"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_29"
                    android:text="@string/Bloodsugar_dengji"
                    android:includeFontPadding="false"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_marginStart="@dimen/dp_45"
                    android:layout_marginEnd="@dimen/dp_45">
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:id="@+id/cicle_1"
                        android:background="@drawable/cicle_2032"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:text="1"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Bloodsugar_tips1_0"
                        android:includeFontPadding="false"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_toEndOf="@+id/cicle_1"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_marginStart="@dimen/dp_45"
                    android:layout_marginEnd="@dimen/dp_45">
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:id="@+id/cicle_2"
                        android:background="@drawable/cicle_2032"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:text="2"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Bloodsugar_tips1_1"
                        android:includeFontPadding="false"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_toEndOf="@+id/cicle_2"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_marginStart="@dimen/dp_45"
                    android:layout_marginEnd="@dimen/dp_45">
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:id="@+id/cicle_3"
                        android:background="@drawable/cicle_2032"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:text="3"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Bloodsugar_tips1_2"
                        android:includeFontPadding="false"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_toEndOf="@+id/cicle_3"/>
                </RelativeLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_rect_msg_item_r15"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15">
                    <ImageView
                        android:layout_gravity="top"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:src="@mipmap/tan_blue"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/main_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:text="@string/Bloodsugar_tips1_6"
                            android:layout_marginStart="@dimen/dp_15"/>
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/main_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="@string/Bloodsugar_tips1_5"
                            android:layout_marginStart="@dimen/dp_15"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</LinearLayout>
