<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:background="@color/btn_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/sport_indoor_lin_cancel_save"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_centerVertical="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_16"
                    android:src="@mipmap/sport_indoor_cancal_sport_icon"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="@dimen/dp_5"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="#ffffff"
                    android:id="@+id/sport_indoor_tv_cancel_save"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sport_cannel_save"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sport_indoor_time_icon"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="@dimen/dp_5"/>
                <TextView
                    android:textSize="@dimen/sp_20"
                    android:textColor="#ffffff"
                    android:id="@+id/time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/sport_indoor_lin_end_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_14"
                    android:src="@mipmap/sport_indoor_save_sport_icon"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="@dimen/dp_5"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="#ffffff"
                    android:id="@+id/sport_indoor_tv_end_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sport_save"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <fragment
        android:id="@+id/google_mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        class="com.google.android.gms.maps.SupportMapFragment"/>
    <ImageView
        android:id="@+id/gode_iv_dinwei"
        android:layout_width="@dimen/dp_35"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_200"
        android:src="@drawable/gaode_dinwei"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:id="@+id/gaode_lin_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@+id/rl_title"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15">
        <ImageView
            android:id="@+id/gaode_iv_back"
            android:layout_width="@dimen/dp_13"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_back"/>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sport_read_time"
            android:layout_marginEnd="@dimen/dp_5"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sp_50"
        android:layout_marginStart="@dimen/dp_60"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_166"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="@dimen/sp_25"
                    android:textColor="@color/white"
                    android:id="@+id/sport_steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="0"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/msg_remark_text_color"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="@string/Steps"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="@dimen/sp_25"
                    android:textColor="@color/white"
                    android:id="@+id/sport_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="00:00:00"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/msg_remark_text_color"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="@string/msg_default_time"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="@dimen/sp_25"
                    android:textColor="@color/white"
                    android:id="@+id/sport_kaluli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="0"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/msg_remark_text_color"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="@string/Kcal"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="@dimen/sp_25"
                    android:textColor="@color/white"
                    android:id="@+id/sport_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="0"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/msg_remark_text_color"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="@string/heart_ranzhi"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="@dimen/sp_25"
                    android:textColor="@color/white"
                    android:id="@+id/sport_pace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="0"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/msg_remark_text_color"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="@string/Pace"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="@dimen/sp_25"
                    android:textColor="@color/main_text_color"
                    android:id="@+id/sport_tv_step_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="0"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/msg_remark_text_color"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="@string/report_buping"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/gaode_font_rel"
        android:background="@color/main_bg_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title">
        <ImageView
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_60"
            android:src="@drawable/sport_indoor_bg"
            android:adjustViewBounds="true"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:id="@+id/gaode_sport_lin_shishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15">
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sport_track_route"
                    android:layout_marginEnd="@dimen/dp_5"/>
                <ImageView
                    android:id="@+id/gaode_iv_shihsi"
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/login_back"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_50">
                <ImageView
                    android:id="@+id/sport_indoor_iv_sport_hr_bg"
                    android:layout_width="@dimen/dp_270"
                    android:layout_height="@dimen/dp_270"
                    android:layout_centerInParent="true"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/f80"
                        android:id="@+id/heart_value_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_5"/>
                    <TextView
                        android:textSize="@dimen/sp_45"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:id="@+id/heart_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/f80"
                        android:id="@+id/heart_value_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/bpm_min"/>
                </LinearLayout>
            </RelativeLayout>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/sport_report_vp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_93"
                android:layout_marginTop="@dimen/dp_70"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_10">
                <ImageView
                    android:orientation="vertical"
                    android:id="@+id/sport_doing_lin_vp_icon1"
                    android:background="@drawable/bg_sport_doing_vp_icon_select"
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_7"
                    android:layout_marginEnd="@dimen/dp_6"/>
                <ImageView
                    android:orientation="vertical"
                    android:id="@+id/sport_doing_lin_vp_icon2"
                    android:background="@drawable/bg_sport_doing_vp_icon_no_select"
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_7"/>
            </LinearLayout>
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/sport_lock"
                    android:background="@drawable/ripple_bg"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:src="@mipmap/sport_indoor_unlock"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_44_5"
                    android:layout_alignParentStart="true"/>
                <com.jstyles.jcring.views.public_views.ProgressButton
                    android:id="@+id/sport_stop"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_toStartOf="@+id/nullview"
                    app:bgImage="@mipmap/sport_stop"
                    app:circleColor="@android:color/transparent"
                    app:radiusa="@dimen/dp_40"
                    app:ringCColor="#2f2f2f"
                    app:ringColor="#f0535e"
                    app:roundwith="@dimen/dp_42"
                    app:strokeWidth="@dimen/dp_3"/>
                <com.jstyles.jcring.views.SportClockView
                    android:id="@+id/slide_rail"
                    android:background="@drawable/slidelock_bg"
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="@dimen/dp_68"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/lock_btn"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:src="@mipmap/sport_lock"/>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/lock_text_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_60">
                        <TextView
                            android:textSize="@dimen/sp_18"
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/slide_to_unlock"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_10"
                            android:src="@mipmap/lock_view_right"
                            android:adjustViewBounds="true"
                            android:layout_marginStart="@dimen/dp_8"/>
                    </LinearLayout>
                </com.jstyles.jcring.views.SportClockView>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/sport_iv_speek"
                    android:background="@drawable/ripple_bg"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:src="@mipmap/sport_indoor_speek_un"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_44_5"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
