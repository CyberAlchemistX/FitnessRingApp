<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_rt"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_90">
    <ImageView
        android:id="@+id/sport_type_img"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_29"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@mipmap/sport_icon1"
        android:adjustViewBounds="true"
        android:layout_marginStart="@dimen/dp_11_5"/>
    <View
        android:id="@+id/null_view"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="@dimen/sp_16"
        android:textColor="@color/main_text_color"
        android:id="@+id/sport_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="抱朴"
        android:includeFontPadding="false"
        android:layout_above="@+id/null_view"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_toEndOf="@+id/sport_type_img"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/msg_remark_text_color"
        android:id="@+id/sport_type_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="2022/5/25 08:30"
        android:includeFontPadding="false"
        android:layout_above="@+id/null_view"
        android:layout_marginStart="@dimen/dp_3_5"
        android:layout_toEndOf="@+id/sport_type"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_7"
        android:weightSum="3"
        android:layout_below="@+id/null_view"
        android:layout_toEndOf="@+id/sport_type_img">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_21"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/sport_center_iv1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_17"
                android:src="@mipmap/run_history_detail_icon1"
                android:adjustViewBounds="true"/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/main_text_color"
                android:id="@+id/sport_center_tv1_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="@dimen/dp_7_5"/>
            <TextView
                android:textSize="@dimen/sp_11"
                android:textColor="@color/msg_remark_text_color"
                android:id="@+id/sport_center_tv1_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公里"
                android:layout_marginStart="@dimen/dp_2_5"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_21"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/sport_center_iv2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_17"
                android:src="@mipmap/run_history_detail_icon2"
                android:adjustViewBounds="true"/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/main_text_color"
                android:id="@+id/sport_center_tv2_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="@dimen/dp_7_5"/>
            <TextView
                android:textSize="@dimen/sp_11"
                android:textColor="@color/msg_remark_text_color"
                android:gravity="top"
                android:id="@+id/sport_center_tv2_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="步"
                android:layout_marginStart="@dimen/dp_2_5"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_21"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_17"
                android:src="@mipmap/run_history_detail_icon1"
                android:adjustViewBounds="true"/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/main_text_color"
                android:id="@+id/sport_center_tv3_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:layout_marginStart="@dimen/dp_7_5"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
