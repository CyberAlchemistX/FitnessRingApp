<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_rect_white_item15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@android:color/black"
            android:id="@+id/history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yyyy-mm-dd"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@android:color/black"
            android:id="@+id/history_cout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toEndOf="@+id/history_date"/>
        <ImageView
            android:id="@+id/img_status"
            android:background="@drawable/ripple_bg"
            android:padding="@dimen/dp_10"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_28_5"
            android:src="@mipmap/bloodsugarhistory_bottom"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_22"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        android:weightSum="10"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15">
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="#60000000"
            android:gravity="start"
            android:layout_gravity="center"
            android:id="@+id/nomor_cout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0%"
            android:layout_weight="2"/>
        <com.jstyles.jcring.views.public_views.TransverseRatioView
            android:layout_gravity="center"
            android:id="@+id/transverseRatioView"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_12"
            android:layout_weight="6"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="#60000000"
            android:gravity="end"
            android:layout_gravity="center"
            android:id="@+id/error_cout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0%"
            android:layout_weight="2"/>
    </LinearLayout>
    <View
        android:id="@+id/line_view"
        android:background="@android:color/black"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"/>
    <com.zxn.expand.ExpandLayout
        android:id="@+id/show_info_ll"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="vertical"
            android:id="@+id/item_RecyclerView"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.zxn.expand.ExpandLayout>
</LinearLayout>
