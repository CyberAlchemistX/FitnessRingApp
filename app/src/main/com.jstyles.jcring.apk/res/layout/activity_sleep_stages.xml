<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_gravity="bottom"
                    android:background="@drawable/bg_sleep_overview_big_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/bg_overview_sleep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/iv_sleep_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_80"
                        android:src="@drawable/ic_sleep_stages"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="@string/sleep_describe_stages"
                        android:layout_marginHorizontal="@dimen/dp_20"/>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:text="@string/sleep_describe_stages_tip1"
                        android:layout_marginHorizontal="@dimen/dp_20"/>
                </LinearLayout>
            </FrameLayout>
            <com.jstyles.jcring.views.oximeter_1963.sleepview.SleepOverviewTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                app:stvContent="@string/sleep_describe_stages_tip5"
                app:stvTitle="@string/sleep_describe_stages_tip4"/>
            <com.jstyles.jcring.views.oximeter_1963.sleepview.SleepOverviewTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                app:stvContent="@string/sleep_describe_stages_tip7"
                app:stvTitle="@string/sleep_describe_stages_tip6"
                app:styBott0mText="@string/sleep_describe_stages_tip8"/>
            <com.jstyles.jcring.views.oximeter_1963.sleepview.SleepOverviewTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                app:stvContent="@string/sleep_describe_stages_tip10"
                app:stvTitle="@string/sleep_describe_stages_tip9"
                app:styBott0mText="@string/sleep_describe_stages_tip11"/>
            <com.jstyles.jcring.views.oximeter_1963.sleepview.SleepOverviewTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                app:stvContent="@string/sleep_describe_stages_tip13"
                app:stvTitle="@string/sleep_describe_stages_tip12"
                app:styBott0mText="@string/sleep_describe_stages_tip14"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/ll_title"
        android:paddingTop="@dimen/dp_39"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_title_msg"/>
    </LinearLayout>
</FrameLayout>
