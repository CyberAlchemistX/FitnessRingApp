<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_title1"
        android:background="@color/main_bg_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_17"
                android:src="@mipmap/login_back"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/sp_22"
            android:textColor="@color/main_text_color"
            android:gravity="center"
            android:id="@+id/title_button"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise"
            android:layout_centerVertical="true"
            android:textAllCaps="false"
            android:layout_toEndOf="@+id/back"/>
        <RelativeLayout
            android:id="@+id/iv_share"
            android:background="@drawable/ripple_bg"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_45"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_alignParentEnd="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_22"
                android:src="@mipmap/main_run_setting"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:layout_below="@+id/rl_title1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sport_tt1"
                android:layout_marginStart="@dimen/dp_10"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/lest_img0"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_11"
                android:src="@mipmap/right_white"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/dp_5"/>
        </LinearLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/sport_Time_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_36"
                    android:textColor="@android:color/white"
                    android:id="@+id/sport_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/line_notdata"
                    android:layout_marginStart="@dimen/dp_10"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="#50ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/m"
                    android:layout_marginStart="@dimen/dp_6"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="#50ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sport_tt2"
                android:includeFontPadding="false"
                android:layout_below="@+id/sport_Time_ll"
                android:layout_marginStart="@dimen/dp_10"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/sport_Time_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_45"
                android:layout_toEndOf="@+id/sport_Time_ll">
                <TextView
                    android:textSize="@dimen/sp_36"
                    android:textColor="@android:color/white"
                    android:id="@+id/sport_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/line_notdata"
                    android:layout_marginStart="@dimen/dp_10"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="#50ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ci"
                    android:layout_marginStart="@dimen/dp_6"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="#50ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sport_tt3"
                android:includeFontPadding="false"
                android:layout_below="@+id/sport_Time_count"
                android:layout_marginStart="@dimen/dp_55"
                android:layout_toEndOf="@+id/sport_Time_ll"/>
        </RelativeLayout>
        <RadioGroup
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:checkedButton="@+id/sport_0">
            <RadioButton
                android:textSize="@dimen/sp_16"
                android:textColor="@drawable/main_select_text_color"
                android:gravity="center"
                android:id="@+id/sport_0"
                android:background="@drawable/ripple_bg"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="@string/sport_index_1"
                android:drawableBottom="@drawable/main_sport_selector"
                android:layout_weight="1"/>
            <RadioButton
                android:textSize="@dimen/sp_16"
                android:textColor="@drawable/main_select_text_color"
                android:gravity="center"
                android:id="@+id/sport_1"
                android:background="@drawable/ripple_bg"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="@string/sport_index_2"
                android:drawableBottom="@drawable/main_sport_selector"
                android:layout_weight="1"/>
            <RadioButton
                android:textSize="@dimen/sp_16"
                android:textColor="@drawable/main_select_text_color"
                android:gravity="center"
                android:id="@+id/sport_2"
                android:background="@drawable/ripple_bg"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="@string/sport_index_10"
                android:drawableBottom="@drawable/main_sport_selector"
                android:layout_weight="1"/>
            <RadioButton
                android:textSize="@dimen/sp_16"
                android:textColor="@drawable/main_select_text_color"
                android:gravity="center"
                android:id="@+id/sport_3"
                android:background="@drawable/ripple_bg"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="@string/sport_tt6"
                android:drawableBottom="@drawable/bg_sport_unselrct"
                android:layout_weight="1"/>
        </RadioGroup>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/map_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title">
        <ImageView
            android:id="@+id/main_run_indoor_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/main_run_indoor_back"
            android:scaleType="centerCrop"/>
        <RelativeLayout
            android:id="@+id/sport_heartrata_img_rt"
            android:background="@drawable/bg_ffffff_r10"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20">
            <ImageView
                android:id="@+id/sport_heartrata_img"
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_12"
                android:src="@mipmap/main_run_heartrate_unkown"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_10"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@android:color/black"
                android:id="@+id/sport_heartrata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/line_notdata"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_toEndOf="@+id/sport_heartrata_img"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/bg_ffffff_r10"
            android:layout_width="@dimen/dp_88"
            android:layout_height="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_alignParentEnd="true">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="#50000000"
                android:id="@+id/sport_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_10"/>
            <ImageView
                android:id="@+id/sport_gps_img"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_10"
                android:src="@drawable/anim_sport_gps_update"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_toEndOf="@+id/sport_gps"/>
        </RelativeLayout>
        <View
            android:id="@+id/null_view"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/null_view"
            android:layout_below="@+id/sport_heartrata_img_rt"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/null_view">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.8">
                <RadioGroup
                    android:id="@+id/sport_rt"
                    android:background="@drawable/bg_ffffff_r20"
                    android:layout_width="@dimen/dp_288"
                    android:layout_height="@dimen/dp_45"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
                <View
                    android:background="#30000000"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginBottom="@dimen/dp_9"
                    android:layout_alignTop="@+id/sport_rt"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
