<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_right"/>
    <RelativeLayout
        android:id="@+id/google_Rt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_68"
        android:layout_below="@+id/rl_title">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/google_fit_left"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_81"
            android:src="@mipmap/googlefit"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonGoogleFit"
        android:layout_below="@+id/google_Rt">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/main_text_color"
                android:gravity="center"
                android:layout_gravity="top|center_horizontal"
                android:id="@+id/Googlefit_Tips1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:text="@string/healthconnect_tip"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="#fc5656"
                android:gravity="center"
                android:layout_gravity="top|center_horizontal"
                android:id="@+id/Googlefit_Tips2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:text="@string/healthconnect_tip1"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/main_text_color"
                android:id="@+id/Googlefit_info_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_52"
                android:text="@string/Googlefit_info"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:id="@+id/buttonGoogleFit111"
        android:background="@drawable/bg_rect_btn_bg_r10_ripple"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_80"
        android:text="1111"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"/>
    <Button
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:id="@+id/buttonGoogleFit"
        android:background="@drawable/bg_rect_btn_bg_r10_ripple"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_30"
        android:text="@string/set_permissions"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"/>
</RelativeLayout>
