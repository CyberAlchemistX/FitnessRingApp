<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_1">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/main_ll"
        android:background="@drawable/bg_rect_msg_item_r20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_7_5"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:elevation="@dimen/dp_1">
        <RelativeLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_20">
            <ImageView
                android:id="@+id/health_item_iv_icon"
                android:layout_width="@dimen/dp_33"
                android:layout_height="@dimen/dp_33"
                android:src="@mipmap/healthtab_0"/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:textColor="@color/msg_remark_text_color"
                android:id="@+id/health_item_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="心率"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/dp_7"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_toEndOf="@+id/health_item_iv_icon"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/health_item_rel_start"
                android:background="@drawable/bg_rect_btn_home_r20"
                android:paddingLeft="@dimen/dp_11"
                android:paddingRight="@dimen/dp_11"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_28"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:id="@+id/health_item_iv_start"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_marginBottom="@dimen/dp_6"
                    android:src="@mipmap/home_detection_icon1"
                    android:layout_marginEnd="@dimen/dp_5"/>
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="#588bf8"
                    android:id="@+id/health_item_tv_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_measuring"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/health_item_lin_type1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold"
                            android:textColor="@color/main_text_color"
                            android:id="@+id/health_item_tv_remark1_title"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="基准体温变化"/>
                        <TextView
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/msg_remark_text_color"
                            android:id="@+id/health_item_tv_remark1_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/health_item_lin1_remark1"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16">
                        <com.jstyles.jcring.views.FontAkkuratBoldView
                            android:textSize="@dimen/sp_21"
                            android:textColor="@color/main_text_color"
                            android:id="@+id/health_item_lin1_tv_remark1_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_marginStart="@dimen/dp_m_1"/>
                        <TextView
                            android:textSize="@dimen/sp_10"
                            android:textColor="@color/msg_remark_text_color"
                            android:id="@+id/health_item_lin1_tv_remark1_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Steps_unit"
                            android:layout_marginStart="@dimen/dp_5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/health_item_lin2_remark1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16">
                        <com.jstyles.jcring.views.FontAkkuratBoldView
                            android:textSize="@dimen/sp_21"
                            android:textColor="@color/main_text_color"
                            android:id="@+id/health_item_lin2_tv_remark1_value1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:layout_marginStart="@dimen/dp_m_1"/>
                        <TextView
                            android:textSize="@dimen/sp_10"
                            android:textColor="@color/msg_remark_text_color"
                            android:id="@+id/health_item_lin2_tv_remark1_unit1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time_hour"
                            android:layout_marginStart="@dimen/dp_3"/>
                        <com.jstyles.jcring.views.FontAkkuratBoldView
                            android:textSize="@dimen/sp_21"
                            android:textColor="@color/main_text_color"
                            android:id="@+id/health_item_lin2_tv_remark1_value2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:layout_marginStart="@dimen/dp_3"/>
                        <TextView
                            android:textSize="@dimen/sp_10"
                            android:textColor="@color/msg_remark_text_color"
                            android:id="@+id/health_item_lin2_tv_remark1_unit2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time_minute"
                            android:layout_marginStart="@dimen/dp_3"/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:orientation="vertical"
                    android:id="@+id/health_item_rel_remark2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6">
                    <TextView
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/msg_remark_text_color"
                        android:id="@+id/health_item_tv_remark2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/max_heart_rate_tip"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">
                        <com.jstyles.jcring.views.FontAkkuratBoldView
                            android:textSize="@dimen/sp_21"
                            android:textColor="@color/main_text_color"
                            android:id="@+id/health_item_tv_remark2_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"/>
                        <TextView
                            android:textSize="@dimen/sp_10"
                            android:textColor="@color/msg_remark_text_color"
                            android:id="@+id/health_item_tv_remark2_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Steps_unit"
                            android:layout_marginStart="@dimen/dp_5"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6">
                    <TextView
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/msg_remark_text_color"
                        android:id="@+id/health_item_tv_remark3_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/max_heart_rate_tip"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/health_item_lin_remark3_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">
                        <com.jstyles.jcring.views.FontAkkuratBoldView
                            android:textSize="@dimen/sp_21"
                            android:textColor="@color/main_text_color"
                            android:id="@+id/health_item_tv_remark3_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"/>
                        <TextView
                            android:textSize="@dimen/sp_10"
                            android:textColor="@color/msg_remark_text_color"
                            android:id="@+id/health_item_tv_remark3_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Steps_unit"
                            android:layout_marginStart="@dimen/dp_5"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/health_item_lin_type2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20">
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/msg_remark_text_color"
                    android:id="@+id/health_item_tv_type2_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"/>
                <com.jstyles.jcring.views.FontAkkuratBoldView
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/main_text_color"
                    android:id="@+id/health_item_tv_type2_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="--"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/msg_remark_text_color"
                    android:id="@+id/health_item_tv_type2_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="--"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/health_item_lin_type4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/main_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/curr_status"/>
                    <TextView
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/msg_remark_text_color"
                        android:id="@+id/health_item_tv_type4_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(08:30)"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5">
                    <TextView
                        android:textSize="@dimen/sp_26_3"
                        android:textStyle="bold"
                        android:textColor="@color/main_text_color"
                        android:id="@+id/health_item_tv_type4_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+0.3"/>
                    <TextView
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/msg_remark_text_color"
                        android:id="@+id/health_item_tv_type4_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="℃"
                        android:layout_marginStart="@dimen/dp_5"/>
                    <TextView
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/msg_remark_text_color"
                        android:id="@+id/health_item_tv_type4_unit1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_above_baseline_avg"
                        android:layout_marginStart="@dimen/dp_5"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/health_item_lin_type3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_25">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/btn_bg"
                android:gravity="center"
                android:id="@+id/health_item_tv_report"
                android:background="@drawable/button1_blood_glucose_r22"
                android:layout_width="@dimen/dp_134"
                android:layout_height="@dimen/dp_34"
                android:text="@string/blood_sugar_report"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/main_text_color_fan"
                android:gravity="center"
                android:id="@+id/health_item_tv_history"
                android:background="@drawable/button2_blood_glucose_r22"
                android:layout_width="@dimen/dp_134"
                android:layout_height="@dimen/dp_34"
                android:text="@string/blood_sugar_history"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
