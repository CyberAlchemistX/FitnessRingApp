<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_mian"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_gravity="bottom"
        android:background="@drawable/bg_rect_msg_item_r20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_344"
        android:layout_marginBottom="@dimen/dp_9"
        android:layout_marginStart="@dimen/dp_9"
        android:layout_marginEnd="@dimen/dp_9">
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/main_text_color"
            android:gravity="center"
            android:id="@+id/time_warning_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:includeFontPadding="false"/>
        <View
            android:id="@+id/title_line"
            android:layout_height="@dimen/dp_0_5"
            android:layout_below="@+id/time_warning_title"
            style="@style/lineitem"/>
        <RelativeLayout
            android:id="@+id/submit_rt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54_5"
            android:layout_alignParentBottom="true">
            <View
                android:layout_height="@dimen/dp_0_5"
                android:layout_alignParentTop="true"
                style="@style/lineitem"/>
            <View
                android:id="@+id/tipview"
                android:background="@color/e140000"
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"/>
            <Button
                android:textSize="@dimen/sp_16"
                android:textColor="@color/main_text_color"
                android:id="@+id/time_cancel"
                android:background="@drawable/ripple_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/cancel"
                android:layout_toStartOf="@+id/tipview"/>
            <Button
                android:textSize="@dimen/sp_16"
                android:textColor="@color/main_text_color"
                android:id="@+id/time_ok"
                android:background="@drawable/ripple_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/ok"
                android:layout_toEndOf="@+id/tipview"/>
        </RelativeLayout>
        <com.zyyoona7.wheel.WheelView
            android:id="@+id/minute_PickerScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/submit_rt"
            android:layout_below="@+id/title_line"
            app:wv_dividerColor="#b1b1b1"
            app:wv_normalItemTextColor="@color/msg_remark_text_color"
            app:wv_selectedItemTextColor="@color/main_text_color"
            app:wv_showDivider="false"
            app:wv_textSize="@dimen/sp_20"
            app:wv_visibleItems="5"/>
    </RelativeLayout>
</LinearLayout>
