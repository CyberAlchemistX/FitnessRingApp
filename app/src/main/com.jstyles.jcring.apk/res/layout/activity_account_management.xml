<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_msg"/>
    <RelativeLayout
        android:id="@+id/phonert"
        android:background="@drawable/bg_rect_msg_item_r20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@+id/rl_title"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/main_text_color"
            android:id="@+id/phone_band"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="@string/bind_account"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_14_5"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/lest_img0"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_11"
            android:src="@mipmap/lest_img"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/main_text_color"
            android:id="@+id/phone_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unband_phone"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10_5"
            android:layout_toStartOf="@+id/lest_img0"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/msg_remark_text_color"
        android:id="@+id/account_manager_meun1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:text="@string/secure"
        android:layout_below="@+id/phonert"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_14_5"/>
    <RelativeLayout
        android:id="@+id/Cancel_account_rt"
        android:background="@drawable/bg_rect_msg_item_r20_ripple"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_below="@+id/account_manager_meun1">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/main_text_color"
            android:id="@+id/Cancel_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Cancel_account"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_21"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="#ff5757"
            android:gravity="end"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Cancel_account_tips"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10_5"
            android:layout_marginEnd="@dimen/dp_10_5"
            android:layout_toStartOf="@+id/lest_img5"
            android:layout_toEndOf="@+id/Cancel_account"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/lest_img5"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_11"
            android:src="@mipmap/lest_img"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</RelativeLayout>
