<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/home_title_back"
            android:background="@mipmap/home_title_back1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_165">
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/RadioGroup_rt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="snap|exitUntilCollapsed|scroll">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/user_img"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_27"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:src="@mipmap/app_h_logo"
                    android:adjustViewBounds="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dp_15"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/health_new_report_add_device"
                    android:background="@drawable/ripple_bg"
                    android:padding="@dimen/dp_1"
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:src="@mipmap/add_device"
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/dp_15"/>
                <com.jstyles.jcring.views.SyncView
                    android:id="@+id/health_new_report_refresh"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_toStartOf="@+id/health_new_report_add_device"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/health_new_report_message"
                    android:background="@drawable/ripple_bg"
                    android:padding="@dimen/dp_1"
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:src="@mipmap/home_ic_message"
                    android:scaleType="fitXY"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_toStartOf="@+id/health_new_report_refresh"/>
                <com.jstyles.jcring.views.public_views.CircleColor
                    android:layout_gravity="center_vertical"
                    android:id="@+id/automsg_1"
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_6"
                    android:layout_above="@+id/health_new_report_message"
                    android:layout_marginStart="@dimen/dp_m_15"
                    android:layout_toEndOf="@+id/health_new_report_message"
                    app:round_circleColor="#bb1d13"/>
            </RelativeLayout>
            <com.jstyles.jcring.views.CenteringTabLayout
                android:id="@+id/health_new_report_tablay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                app:tabBackground="@null"
                app:tabIndicatorColor="@android:color/white"
                app:tabIndicatorHeight="@dimen/dp_3"
                app:tabMode="auto"
                app:tabRippleColor="@null"
                app:tabSelectedTextColor="@android:color/white"
                app:tabTextAppearance="@style/MyCustomTabText"
                app:tabTextColor="#50ffffff"/>
        </LinearLayout>
        <include layout="@layout/fragment_health_new_report_item"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <include layout="@layout/floating_menu_button"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
