<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_view"
        android:background="#252a2e"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:behavior_peekHeight="@dimen/dp_110"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/ll_run_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_39"
                android:layout_marginStart="@dimen/dp_20"
                android:paddingHorizontal="@dimen/dp_10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_sport_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_sport_gps_run"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="#ffffff"
                    android:id="@+id/tv_sport_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="asdasd"
                    android:layout_marginStart="@dimen/dp_4"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/ll_target"
                            android:background="@drawable/round_main_color_bg"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginHorizontal="@dimen/dp_25">
                            <TextView
                                android:textSize="@dimen/sp_16"
                                android:textColor="#ffffffff"
                                android:id="@+id/tv_target_km"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:layout_marginHorizontal="@dimen/dp_15"/>
                            <ProgressBar
                                android:id="@+id/pb_target"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:progress="0"
                                android:progressTint="@color/colorPrimary"
                                android:layout_marginHorizontal="@dimen/dp_15"
                                style="?android:attr/progressBarStyleHorizontal"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dp_15"
                                android:layout_marginHorizontal="@dimen/dp_15">
                                <TextView
                                    android:textSize="@dimen/sp_14"
                                    android:textColor="@color/white50"
                                    android:id="@+id/tv_perpen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <Space
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:textSize="@dimen/sp_14"
                                    android:textColor="@color/white50"
                                    android:id="@+id/tv_km_sy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:id="@+id/v_space"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_35"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/ll_exend_show"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginHorizontal="@dimen/dp_25"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <TextView
                                android:textSize="@dimen/sp_80"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:id="@+id/tv_hear_second"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="- -"
                                android:includeFontPadding="false"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_16"
                                android:src="@mipmap/ic_new_sport_aixin"
                                android:layout_marginStart="@dimen/dp_10"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:id="@+id/v_space_2"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"/>
                <com.jstyles.jcring.views.sport.SportSpaceView
                    android:id="@+id/ssv_space"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_25"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginHorizontal="@dimen/dp_25"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white30"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_tip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_30">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/ll_locked"
                    android:background="@drawable/bg_new_sport_bottom"
                    android:layout_width="@dimen/dp_53"
                    android:layout_height="@dimen/dp_53"
                    android:layout_marginEnd="@dimen/dp_15">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_new_sport_bottom_lock"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/ll_opertion"
                        android:visibility="invisible"
                        android:layout_width="@dimen/dp_182"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/white30"
                            android:gravity="center"
                            android:id="@+id/tv_tip2"
                            android:visibility="visible"
                            android:layout_width="@dimen/dp_81"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginBottom="@dimen/dp_4"
                            android:text="@string/long_press_to_end"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:visibility="visible"
                            android:layout_width="@dimen/dp_182"
                            android:layout_height="wrap_content">
                            <com.jstyles.jcring.views.sport.SportStopBtnView
                                android:id="@+id/ssb_stop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"/>
                            <Space
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/iv_green"
                                android:layout_width="@dimen/dp_81"
                                android:layout_height="@dimen/dp_81"
                                android:src="@mipmap/ic_new_sport_start_green"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/iv_white"
                        android:visibility="visible"
                        android:layout_width="@dimen/dp_81"
                        android:layout_height="@dimen/dp_81"
                        android:src="@mipmap/ic_new_sport_start"/>
                    <com.jstyles.jcring.views.sport.SportUnlockBtnView
                        android:id="@+id/ssb_unlock"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/ll_set"
                    android:background="@drawable/bg_new_sport_bottom"
                    android:layout_width="@dimen/dp_53"
                    android:layout_height="@dimen/dp_53"
                    android:layout_marginStart="@dimen/dp_15">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_new_sport_bottom_set"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
