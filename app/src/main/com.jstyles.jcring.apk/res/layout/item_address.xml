<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/ripple_bg_white_rect"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_110">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/address_itemimg"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_22"
        android:src="@mipmap/address_itemimg"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_15"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="#515151"
        android:id="@+id/devices_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_12"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:layout_above="@+id/phone"
        android:layout_marginStart="@dimen/dp_14_5"
        android:layout_toEndOf="@+id/address_itemimg"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="#515151"
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_14_5"
        android:layout_toEndOf="@+id/address_itemimg"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="#50111111"
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:layout_below="@+id/phone"
        android:layout_marginStart="@dimen/dp_14_5"
        android:layout_toEndOf="@+id/address_itemimg"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/devices_type_right"
        android:background="@mipmap/address_edit"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_19"
        android:layout_alignParentEnd="true"/>
    <View
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/devices_type_name"
        style="@style/lineitem"/>
</RelativeLayout>
