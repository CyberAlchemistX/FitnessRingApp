<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_39"/>
        <include layout="@layout/layout_title"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_layout">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In order to avoid system background restrictions interrupting the app&apos;s operation or causing part of the exercise record data to be missing, it is recommended to set the following permissions."
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginVertical="@dimen/dp_10"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="#1b1d20"
                android:padding="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Hover Window Permissions"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/bg_colorprimay_r20"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="wrap_content"
                        android:text="Setting"
                        android:paddingVertical="@dimen/dp_5"/>
                </LinearLayout>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="Enabled to a certain extent to ensure that the app running process is not mistakenly killed by the cell phone system process"
                    android:layout_marginEnd="@dimen/dp_70"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="#1b1d20"
                android:padding="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Whitelist Optimization"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/bg_colorprimay_r20"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="wrap_content"
                        android:text="Setting"
                        android:paddingVertical="@dimen/dp_5"/>
                </LinearLayout>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="Add the app to the battery optimization whitelist so that background activities such as recording exercise data are not affected"
                    android:layout_marginEnd="@dimen/dp_70"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="#1b1d20"
                android:padding="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Background Operation"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/bg_colorprimay_r20"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="wrap_content"
                        android:text="Setting"
                        android:paddingVertical="@dimen/dp_5"/>
                </LinearLayout>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="Turning it on will go some way to ensuring that the app continues to run in the background"
                    android:layout_marginEnd="@dimen/dp_70"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
