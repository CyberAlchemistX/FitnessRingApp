<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_mian"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_gravity="bottom"
        android:background="@drawable/bg_rect_msg_item_r20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_360"
        android:layout_marginBottom="@dimen/dp_9"
        android:layout_marginStart="@dimen/dp_9"
        android:layout_marginEnd="@dimen/dp_9">
        <TextView
            android:textSize="@dimen/sp_18"
            android:textColor="@color/main_text_color"
            android:gravity="center"
            android:id="@+id/heartrate_warning_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:text="@string/customs"
            android:includeFontPadding="false"/>
        <View
            android:id="@+id/title_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_below="@+id/heartrate_warning_title"/>
        <RelativeLayout
            android:id="@+id/submit_rt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54_5"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_alignParentBottom="true">
            <Button
                android:textSize="@dimen/sp_16"
                android:textColor="@color/main_text_color"
                android:id="@+id/ok"
                android:background="@drawable/bg_rect_btn_bg_r10_ripple"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:text="@string/ok"
                android:layout_marginStart="@dimen/dp_72"
                android:layout_marginEnd="@dimen/dp_72"/>
        </RelativeLayout>
        <com.zyyoona7.wheel.WheelView
            android:id="@+id/wheelView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/submit_rt"
            android:layout_below="@+id/title_line"
            app:wv_dividerColor="#b1b1b1"
            app:wv_normalItemTextColor="@color/select_dialog_unselect_text_color"
            app:wv_selectedItemTextColor="@color/main_text_color"
            app:wv_selectedRectColor="@color/select_dialog_bg"
            app:wv_showDivider="false"
            app:wv_textSize="@dimen/sp_20"
            app:wv_visibleItems="5"/>
    </RelativeLayout>
</LinearLayout>
