<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rect_msg_item_r20"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:paddingHorizontal="@dimen/dp_20"
    android:paddingVertical="@dimen/dp_15">
    <TextView
        android:textSize="@dimen/sp_13"
        android:textColor="@color/main_text_color"
        android:gravity="start"
        android:id="@+id/problem_item_tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="7、打开APP后，已经显示设备号与电量，但下方又有未连接的提示。"
        android:layout_marginEnd="@dimen/dp_25"
        app:layout_constraintEnd_toStartOf="@+id/problem_item_iv_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/problem_item_iv_icon"
        android:layout_width="@dimen/dp_11"
        android:layout_height="wrap_content"
        android:src="@mipmap/sport_hisbottom_img"
        android:adjustViewBounds="true"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/problem_item_tv_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/problem_item_tv_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/problem_item_lin_line"
        android:background="@color/msg_remark_text_color"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@+id/problem_item_tv_content"/>
    <TextView
        android:textSize="@dimen/sp_13"
        android:textColor="@color/msg_remark_text_color"
        android:id="@+id/problem_item_tv_remark"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="戒指出厂默认为运输模式，关闭了蓝牙信号，拆包装后的首次使用需充电激活。当充电时指示灯（绿灯）点亮，即表示激活成功。"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/problem_item_lin_line"/>
</androidx.constraintlayout.widget.ConstraintLayout>
