<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_mian"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/bg_rect_msg_item_r10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_57"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15">
        <TextView
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:textColor="@color/main_text_color"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ble_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:text="@string/woman_zhenzhuang"
            android:layout_centerHorizontal="true"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/zhenzhuang_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_above="@+id/ble_status_ok"
            android:layout_below="@+id/ble_tips"/>
        <Button
            android:textSize="@dimen/sp_16"
            android:textColor="@android:color/white"
            android:id="@+id/ble_status_ok"
            android:background="@drawable/bg_rect_btn_bg_r10_ripple"
            android:layout_width="@dimen/dp_228"
            android:layout_height="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_30"
            android:text="@string/confirm"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
