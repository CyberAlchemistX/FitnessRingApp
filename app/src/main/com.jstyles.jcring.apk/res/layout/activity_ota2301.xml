<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/dp_293"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/title_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:src="@mipmap/down"
            android:scaleType="fitXY"/>
        <RelativeLayout
            android:background="@mipmap/bottom_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_img">
            <TextView
                android:textSize="@dimen/sp_18"
                android:textColor="#111111"
                android:gravity="center"
                android:id="@+id/down_ing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_35"
                android:text="@string/down"
                android:includeFontPadding="false"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"/>
            <com.jstyles.jcring.views.public_views.CirclePercentView
                android:id="@+id/press_view"
                android:layout_width="@dimen/dp_108"
                android:layout_height="@dimen/dp_108"
                android:layout_marginTop="@dimen/dp_26"
                android:layout_below="@+id/down_ing"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="#00625a"
                android:id="@+id/down_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_below="@+id/press_view"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="#111111"
                android:gravity="center"
                android:id="@+id/uptata_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_29"
                android:layout_marginBottom="@dimen/dp_30"
                android:text="@string/uptata_tips"
                android:layout_below="@+id/down_version"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"/>
            <Button
                android:textSize="@dimen/sp_14"
                android:textColor="@android:color/white"
                android:id="@+id/dfu_status_completed"
                android:background="@drawable/button_full"
                android:visibility="gone"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_36"
                android:layout_marginTop="@dimen/dp_29"
                android:layout_marginBottom="@dimen/dp_30"
                android:text="@string/dfu_status_completed"
                android:layout_below="@+id/press_view"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
