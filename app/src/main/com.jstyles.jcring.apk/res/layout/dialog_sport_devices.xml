<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_mian"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/bg_rect_msg_item_r10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20">
        <TextView
            android:textSize="@dimen/sp_18"
            android:textColor="@color/main_text_color"
            android:gravity="center"
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            android:text="@string/sport_exit_tip6"
            android:includeFontPadding="false"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_below="@+id/tv_content">
            <Button
                android:textSize="@dimen/sp_16"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/button_confim"
                android:background="@drawable/ripple_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sport_exit_tip4"
                android:layout_weight="1"
                android:paddingVertical="@dimen/dp_8"/>
            <View
                android:id="@+id/null_view"
                android:background="#12121212"
                android:paddingBottom="@dimen/dp_15"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_31"
                android:layout_below="@+id/tv_content"
                android:layout_centerHorizontal="true"/>
            <Button
                android:textSize="@dimen/sp_16"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/button_cancel"
                android:background="@drawable/ripple_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sport_exit_tip5"
                android:layout_weight="1"
                android:paddingVertical="@dimen/dp_8"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
