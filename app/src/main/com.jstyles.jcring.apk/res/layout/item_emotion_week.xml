<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/mian_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2_5">
        <com.jstyles.jcring.views.hostory_view.EmotionRoundView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/emotin_4"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_51"
            android:layout_centerInParent="true"
            app:round_circleColor="#20ffffff"/>
        <View
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/emotin_back"
            android:background="@drawable/bg_white_r2"
            android:visibility="gone"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_51"
            android:layout_centerInParent="true"
            app:round_circleColor="#20ffffff"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/sp_10"
        android:textColor="#50ffffff"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_3"
        android:text=""
        android:maxLines="1"
        android:includeFontPadding="false"/>
</LinearLayout>
