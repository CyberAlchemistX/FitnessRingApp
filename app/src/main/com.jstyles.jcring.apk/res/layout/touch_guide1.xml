<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/guide1_iv_image_rt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/guide1_iv_image"
            android:layout_width="@dimen/dp_275"
            android:layout_height="@dimen/dp_221"
            android:src="@mipmap/touchmode_back1"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@android:color/white"
            android:gravity="start"
            android:id="@+id/touch_mode_tips12"
            android:padding="@dimen/dp_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/touch_mode_tips12"
            android:includeFontPadding="false"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_toStartOf="@+id/null__"/>
        <View
            android:id="@+id/cc_0"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_centerInParent="true"/>
        <View
            android:id="@+id/null__"
            android:background="@android:color/white"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_1"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_toStartOf="@+id/cc_0"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/sp_20"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/touch_mode_tips13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/touch_mode_tips13"
        android:layout_below="@+id/guide1_iv_image_rt"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="#40ffffff"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/touch_mode_tips14"
        android:layout_below="@+id/touch_mode_tips13"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"/>
</RelativeLayout>
