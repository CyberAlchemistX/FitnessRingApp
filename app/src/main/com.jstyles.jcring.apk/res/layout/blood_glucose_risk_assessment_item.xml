<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/main_text_color"
        android:gravity="center"
        android:id="@+id/blood_glucose_risk_assessment_tv_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="周二"
        android:maxLines="2"
        android:layout_above="@+id/null_view"
        android:layout_centerHorizontal="true"/>
    <View
        android:id="@+id/null_view"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_centerInParent="true"/>
    <RelativeLayout
        android:id="@+id/blood_glucose_risk_assessment_rel_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_below="@+id/null_view"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/blood_glucose_risk_assessment_iv_bg"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_42"
            android:src="@drawable/cicle_gray_r20_stoke"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/blood_glucose_risk_assessment_iv_content"
            android:layout_width="@dimen/dp_21"
            android:layout_height="@dimen/dp_29"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
