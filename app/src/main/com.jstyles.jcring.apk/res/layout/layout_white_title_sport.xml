<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <RelativeLayout
            android:id="@+id/back"
            android:background="@drawable/ripple_bg"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_centerVertical="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/title_img"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_17"
                android:src="@mipmap/login_back"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/sport_switch_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/sp_18"
                android:textColor="@color/main_text_color"
                android:gravity="start|center_vertical"
                android:id="@+id/sport_title"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_45"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_8"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:background="@drawable/ripple_bg"
                android:padding="@dimen/dp_15"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:src="@mipmap/steps_switch"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/sport_title"/>
        </RelativeLayout>
        <View
            android:id="@+id/his_null_view"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_39"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</merge>
