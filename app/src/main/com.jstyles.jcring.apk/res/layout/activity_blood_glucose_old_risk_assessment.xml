<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_white_hostory_title"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/rl_title">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_rect_msg_item_r20"
                android:padding="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5">
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:textColor="@color/main_text_color"
                        android:id="@+id/blood_glucose_risk_assessment_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/risk_of_diabetes"
                        android:layout_centerInParent="true"/>
                    <ImageView
                        android:id="@+id/blood_glucose_risk_assessment_iv_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/tan_1"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_toEndOf="@+id/blood_glucose_risk_assessment_title1"/>
                </RelativeLayout>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/blood_glucose_risk_assessment_iv_status"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginTop="@dimen/dp_22"
                    android:src="@mipmap/boold_sugar_result_status1"/>
                <TextView
                    android:textSize="@dimen/dp_19"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/blood_glucose_risk_assessment_tv_status"
                    android:background="@drawable/result0_status_blood_glucose_r10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/blood_sugar_result1_tip"/>
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/main_text_color"
                    android:layout_gravity="center"
                    android:id="@+id/blood_glucose_risk_assessment_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_21"
                    android:text="022年09月03日 - 022年09月1日"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/blood_glucose_risk_assessment_rv_data"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_90"
                    android:layout_marginTop="@dimen/dp_23"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/blood_glucose_risk_assessment_lin_remark"
                    android:background="@drawable/note_blood_glucose_r20"
                    android:padding="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20">
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/main_text_color"
                        android:id="@+id/blood_glucose_risk_assessment_tv_remark1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/main_text_color"
                        android:id="@+id/blood_glucose_risk_assessment_tv_remark2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15">
                    <ImageView
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:src="@mipmap/boold_sugar_result_tip"/>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/msg_remark_text_color"
                        android:id="@+id/blood_glucose_risk_assessment_tv_remark3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginStart="@dimen/dp_7"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_rect_msg_item_r20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="@color/main_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/blood_sugar_test_result"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/blood_glucose_risk_assessment_lin_result"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20">
                    <ImageView
                        android:id="@+id/blood_glucose_risk_assessment_iv_result"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_28"
                        android:src="@mipmap/boold_sugar_result_icon_blue"/>
                    <TextView
                        android:textSize="@dimen/sp_24"
                        android:textStyle="bold"
                        android:textColor="@color/btn_bg"
                        android:id="@+id/blood_glucose_risk_assessment_tv_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正常"
                        android:layout_marginStart="@dimen/dp_12"/>
                </LinearLayout>
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/msg_remark_text_color"
                    android:id="@+id/blood_glucose_risk_assessment_tv_result_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="禁食8小时"/>
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/msg_remark_text_color"
                    android:id="@+id/blood_glucose_risk_assessment_tv_titie111"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/blood_sugar_level"/>
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/main_text_color"
                    android:gravity="center"
                    android:id="@+id/blood_glucose_risk_assessment_tv_range"
                    android:background="@drawable/button_blue_r10"
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_190"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_7_5"
                    android:text="@string/abnormal_data_fanwei"/>
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/msg_remark_text_color"
                    android:id="@+id/blood_glucose_risk_assessment_tv_result_no_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_40"
                    android:text="@string/blood_sugar_test_no_result"/>
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/msg_remark_text_color"
                    android:id="@+id/blood_glucose_risk_assessment_tv_result_time"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_27"
                    android:text="测量于: 2022年09月03日 07:12"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
