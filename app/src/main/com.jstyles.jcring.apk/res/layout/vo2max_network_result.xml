<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_white_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:orientation="vertical"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.jstyles.jcring.views.public_views.Vo2MaxCircleResult
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/vo2max_result_circle_view"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_200"
                    android:layout_marginTop="@dimen/dp_39"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/bg_rect_msg_item_r20"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_marginBottom="@dimen/dp_100"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15">
                    <TextView
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/main_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vo2_max_age"/>
                    <TextView
                        android:textSize="@dimen/sp_60"
                        android:textStyle="bold"
                        android:textColor="#803a97"
                        android:id="@+id/vo2max_result_tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="56"/>
                    <TextView
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/msg_remark_text_color"
                        android:gravity="center"
                        android:id="@+id/vo2max_result_tv_age_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:text="You are as fit as 25 years old,that is at the "
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15">
            <Button
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/vo2max_btn_select"
                android:background="@drawable/button_purple_r10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_27"
                android:text="@string/vo2_max_select"
                android:layout_weight="1"
                android:elevation="@dimen/dp_1"/>
            <LinearLayout
                android:layout_width="@dimen/dp_5"
                android:layout_height="wrap_content"/>
            <Button
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/vo2max_btn_agin"
                android:background="@drawable/button_purple_r10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_27"
                android:text="@string/vo2_max_agin"
                android:layout_weight="1"
                android:elevation="@dimen/dp_1"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
