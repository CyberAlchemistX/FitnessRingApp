<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_mian"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_gravity="center"
        android:id="@+id/dialog_detection_rel_bg"
        android:background="@mipmap/home_detection_bg_hr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_272"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15">
        <TextView
            android:textSize="@dimen/sp_21"
            android:textStyle="bold"
            android:textColor="@color/main_text_color"
            android:id="@+id/dialog_detection_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_63"
            android:text="@string/heart_rate_measure"
            android:layout_marginEnd="@dimen/dp_31"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@color/msg_remark_text_color"
            android:id="@+id/dialog_detection_tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_97"
            android:text="@string/measuring_ing_string"
            android:layout_marginEnd="@dimen/dp_31"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/dialog_detection_iv_measure"
            android:layout_width="@dimen/dp_218"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_135"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/dialog_detection_iv_finish"
            android:visibility="gone"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_46"
            android:layout_marginTop="@dimen/dp_135"
            android:src="@mipmap/home_detection_iv_finish_result"
            android:layout_marginEnd="@dimen/dp_31"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/dialog_detection_tv_end"
            android:background="@drawable/bg_rect_btn_bg_r20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38"
            android:layout_marginBottom="@dimen/dp_23"
            android:text="@string/end_measuring"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_31"
            android:layout_marginEnd="@dimen/dp_31"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:textColor="@color/main_text_color"
            android:id="@+id/dialog_detection_tv_real_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_134"
            android:text="@string/real_time_heart_rate"
            android:layout_marginStart="@dimen/dp_31"/>
        <TextView
            android:textSize="@dimen/sp_26_3"
            android:textStyle="bold"
            android:textColor="@color/main_text_color"
            android:id="@+id/dialog_detection_tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_160"
            android:text="--"
            android:layout_marginStart="@dimen/dp_31"/>
        <TextView
            android:textSize="@dimen/sp_10"
            android:textColor="@color/msg_remark_text_color"
            android:id="@+id/dialog_detection_tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_6"
            android:text="@string/bpm_ci"
            android:layout_alignBottom="@+id/dialog_detection_tv_value"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/dialog_detection_tv_value"/>
    </RelativeLayout>
</LinearLayout>
