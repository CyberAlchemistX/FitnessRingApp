<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_white_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/status_bottom_rt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/btn_bg"
                android:id="@+id/reset_info"
                android:background="@drawable/ripple_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="@string/reset_info"
                android:layout_centerHorizontal="true"/>
            <Button
                android:textSize="@dimen/sp_16"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/next_step"
                android:background="@drawable/button_blue_r10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_27"
                android:text="@string/start_measuring_Bloodsugar"
                android:includeFontPadding="false"
                android:layout_below="@+id/reset_info"
                android:layout_marginStart="@dimen/dp_33"
                android:layout_marginEnd="@dimen/dp_33"/>
        </RelativeLayout>
        <androidx.core.widget.NestedScrollView
            android:orientation="vertical"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_above="@+id/status_bottom_rt">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/main_text_color"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:text="@string/Bloodsugar_hour8"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15">
                    <RelativeLayout
                        android:id="@+id/bloodsugar_status_rel_type_8_more"
                        android:background="@drawable/button_blue_r15"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_52">
                        <TextView
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/main_text_color"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hour2_tips3"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/bloodsugar_status_rel_type_2_more"
                        android:background="@drawable/bg_rect_msg_item_r15"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_52"
                        android:layout_marginTop="@dimen/dp_10">
                        <TextView
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/main_text_color"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hour2_tips2"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/bloodsugar_status_rel_type_2_in"
                        android:background="@drawable/bg_rect_msg_item_r15"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_52"
                        android:layout_marginTop="@dimen/dp_10">
                        <TextView
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/main_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hour2_tips1"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/main_text_color"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_60"
                    android:text="@string/bloodsugar_and_tips"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/main_text_color"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:text="@string/Bloodsugar_tips3"
                    android:layout_marginStart="@dimen/dp_31"
                    android:layout_marginEnd="@dimen/dp_31"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</LinearLayout>
