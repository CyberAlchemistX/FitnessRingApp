<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/msg_remark_text_color"
        android:id="@+id/item_sport_sleep_message_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:text="2024年12月12日"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/msg_center_item_lin"
        android:background="@drawable/bg_rect_msg_item_r10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/main_text_color"
            android:id="@+id/item_sport_sleep_message_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/sport_tip_title1"
            android:layout_marginStart="@dimen/dp_20"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_20">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/main_text_color"
                android:id="@+id/item_sport_sleep_message_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dp_15"
                android:layout_height="wrap_content"
                android:src="@mipmap/msg_detiail_time"
                android:adjustViewBounds="true"
                android:layout_marginStart="@dimen/dp_15"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/main_text_color"
                android:id="@+id/item_sport_sleep_message_tv_durtion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="@dimen/dp_5"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="@color/msg_remark_text_color"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_0_5"
                android:text="@string/fen"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dp_15"
                android:layout_height="wrap_content"
                android:src="@mipmap/msg_detiail_bupin"
                android:adjustViewBounds="true"
                android:layout_marginStart="@dimen/dp_15"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/main_text_color"
                android:id="@+id/item_sport_sleep_message_tv_avg_hr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="@dimen/dp_5"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="@color/main_text_color"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_0_5"
                android:text="@string/s_m"
                android:layout_marginStart="@dimen/dp_5"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/item_sport_sleep_message_lin_setting"
                android:background="@drawable/btn_white_r4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_33">
                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/eye_black"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="@dimen/dp_10"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sport_tip_title4"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
