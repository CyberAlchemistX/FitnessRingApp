<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_msg"/>
    <androidx.core.widget.NestedScrollView
        android:orientation="vertical"
        android:id="@+id/question_NestedScrollView"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@+id/send"
        android:layout_below="@+id/rl_title">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/Set_distance_units"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/main_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/feedback_content"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/dp_15"/>
            <TextView
                android:textSize="@dimen/sp_11"
                android:textColor="@color/msg_remark_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/feedback_type"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/dp_15"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/feedback_recyclerView"
                android:paddingBottom="@dimen/dp_11"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_11"
                android:layout_marginEnd="@dimen/dp_11"
                android:nestedScrollingEnabled="false"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_rect_msg_item_r20"
                android:padding="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15">
                <com.jstyles.jcring.views.EditTextWithDelete
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/main_text_color"
                    android:textColorHint="@color/msg_remark_text_color"
                    android:gravity="top"
                    android:id="@+id/et_signin_phonenumber"
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_200"
                    android:hint="@string/describe_the_problem"
                    android:maxLength="500"
                    android:textCursorDrawable="@null"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/msg_remark_text_color"
                    android:layout_gravity="end"
                    android:id="@+id/text_leth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/500"
                    android:includeFontPadding="false"
                    android:layout_marginEnd="@dimen/dp_15"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/sp_18"
                android:textColor="@color/main_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_29"
                android:text="@string/upload_screenshot"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/dp_15"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/msg_remark_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/upload_content"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/dp_15"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/addpic_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginEnd="@dimen/dp_18"/>
            <TextView
                android:textSize="@dimen/sp_18"
                android:textColor="@color/main_text_color"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_29"
                android:text="@string/upload_screenshot_video"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/dp_15"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/msg_remark_text_color"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/upload_content_video"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/dp_15"/>
            <ImageView
                android:id="@+id/addvideo"
                android:background="@drawable/bg_rect_msg_item_r20"
                android:padding="@dimen/dp_29"
                android:visibility="gone"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_90"
                android:layout_marginTop="@dimen/dp_18"
                android:src="@mipmap/add_photo_icon"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/dp_18"/>
            <TextView
                android:textSize="@dimen/sp_18"
                android:textColor="@color/main_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_29"
                android:text="@string/contact_information"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/dp_15"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/msg_remark_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/contact_content"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/dp_15"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_rect_msg_item_r20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15">
                <com.jstyles.jcring.views.EditTextWithDelete
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/main_text_color"
                    android:textColorHint="@color/msg_remark_text_color"
                    android:id="@+id/et_name"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:hint="@string/name_feedback"
                    android:maxLines="1"
                    android:textCursorDrawable="@null"
                    android:paddingStart="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"/>
                <com.jstyles.jcring.views.EditTextWithDelete
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/main_text_color"
                    android:textColorHint="@color/msg_remark_text_color"
                    android:id="@+id/et_emils"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:hint="@string/phone_email"
                    android:maxLines="1"
                    android:inputType="textEmailAddress"
                    android:textCursorDrawable="@null"
                    android:paddingStart="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/send"
        android:background="@drawable/button_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="@string/upload_now"
        android:includeFontPadding="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_19_5"
        android:layout_marginEnd="@dimen/dp_20"/>
</RelativeLayout>
