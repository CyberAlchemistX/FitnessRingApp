<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_white_back_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/OK"
        android:layout_below="@+id/rl_title">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/dp_138"
                android:layout_height="@dimen/dp_138"
                android:layout_marginTop="@dimen/dp_40"
                android:src="@mipmap/breath_img"
                android:scaleType="fitXY"/>
            <TextView
                android:textSize="@dimen/sp_20"
                android:textColor="@color/main_text_color"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/time_chose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginBottom="@dimen/dp_30"
                android:text="@string/time_chose"
                android:includeFontPadding="false"/>
            <com.zyyoona7.wheel.WheelView
                android:layout_gravity="center_horizontal"
                android:id="@+id/wheelView"
                android:layout_width="@dimen/dp_180"
                android:layout_height="wrap_content"
                app:wv_dividerColor="#30ffffff"
                app:wv_normalItemTextColor="@color/select_dialog_unselect_text_color"
                app:wv_selectedItemTextColor="@color/btn_bg"
                app:wv_selectedRectColor="@color/main_bg_color"
                app:wv_showDivider="true"
                app:wv_textSize="@dimen/sp_30"
                app:wv_visibleItems="2"/>
            <TextView
                android:textSize="@dimen/sp_17"
                android:textColor="@color/msg_remark_text_color"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/customs"
                android:background="@drawable/ripple_bg"
                android:padding="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_40"
                android:text="@string/customs"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:textSize="@dimen/sp_16"
        android:textColor="@color/main_text_color"
        android:gravity="center"
        android:id="@+id/OK"
        android:background="@drawable/button_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginBottom="@dimen/dp_28"
        android:text="@string/confirm"
        android:includeFontPadding="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_35"
        android:layout_marginEnd="@dimen/dp_35"/>
</RelativeLayout>
