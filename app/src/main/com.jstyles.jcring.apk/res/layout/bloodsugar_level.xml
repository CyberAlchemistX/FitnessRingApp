<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:orientation="vertical"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="@string/Bloodsugar_level_tips1"
                    android:includeFontPadding="false"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:weightSum="2"
                    android:layout_marginStart="@dimen/dp_35"
                    android:layout_marginEnd="@dimen/dp_35">
                    <TextView
                        android:textSize="@dimen/sp_15"
                        android:textColor="#50111111"
                        android:gravity="start|center_vertical"
                        android:id="@+id/Bloodsugar_level_tips2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Bloodsugar_level_tips2"
                        android:includeFontPadding="false"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="@dimen/sp_15"
                        android:textColor="#50111111"
                        android:gravity="start|center_vertical"
                        android:id="@+id/Bloodsugar_level_tips3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Bloodsugar_level_tips3"
                        android:includeFontPadding="false"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/bg_rect_white_item30"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_10"
                    android:weightSum="2"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15">
                    <com.jstyles.jcring.views.public_views.CircleColor
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_20"
                        app:round_circleColor="#bb1d13"/>
                    <TextView
                        android:textSize="@dimen/sp_15"
                        android:textColor="#bb1d13"
                        android:gravity="start|center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/abnormal_data"
                        android:includeFontPadding="false"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_8"/>
                    <TextView
                        android:textSize="@dimen/sp_15"
                        android:textColor="#111111"
                        android:gravity="start|center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Bloodsugar_level_tips4"
                        android:includeFontPadding="false"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_m_20"/>
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/bg_rect_white_item30"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_10"
                    android:weightSum="2"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15">
                    <com.jstyles.jcring.views.public_views.CircleColor
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_20"
                        app:round_circleColor="#588bf8"/>
                    <TextView
                        android:textSize="@dimen/sp_15"
                        android:textColor="#588bf8"
                        android:gravity="start|center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/normal_data"
                        android:includeFontPadding="false"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_8"/>
                    <TextView
                        android:textSize="@dimen/sp_15"
                        android:textColor="#111111"
                        android:gravity="start|center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Bloodsugar_level_tips5"
                        android:includeFontPadding="false"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_m_20"/>
                </LinearLayout>
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="@string/Bloodsugar_level_tips6"
                    android:includeFontPadding="false"
                    android:layout_marginStart="@dimen/dp_15"/>
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="#50111111"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/Bloodsugar_level_tips7"
                    android:includeFontPadding="false"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</LinearLayout>
