<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_white_title"/>
    <androidx.core.widget.NestedScrollView
        android:orientation="vertical"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/main_text_color"
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:text="@string/Automatic_zonghe_tips"
                android:layout_marginStart="@dimen/dp_19_5"
                android:layout_marginEnd="@dimen/dp_19_5"/>
            <com.zyyoona7.wheel.WheelView
                android:id="@+id/heart_PickerScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/save"
                android:layout_below="@+id/text"
                app:wv_dividerColor="#b1b1b1"
                app:wv_normalItemTextColor="@color/select_dialog_unselect_text_color"
                app:wv_selectedItemTextColor="@color/select_dialog_select_text_color"
                app:wv_selectedRectColor="@color/select_dialog_bg"
                app:wv_showDivider="false"
                app:wv_textSize="@dimen/sp_30"
                app:wv_visibleItems="5"/>
            <Button
                android:textSize="@dimen/sp_16"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/save"
                android:background="@drawable/button_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/confirm"
                android:includeFontPadding="false"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dp_19_5"
                android:layout_marginEnd="@dimen/dp_20"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
