<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <include layout="@layout/layout_title"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_layout">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white50"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/new_fitness_str_1"
                android:layout_marginStart="@dimen/dp_20"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="#1b1d20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_129"
                android:layout_marginTop="@dimen/dp_10">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="@dimen/dp_20">
                    <TextView
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/white"
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/voice_announcements"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/dp_20"/>
                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_gravity="center_vertical"
                        android:id="@+id/sc_voice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="@color/switch_thumb_color"
                        app:trackTint="@color/switch_track_color"/>
                </LinearLayout>
                <View
                    android:background="@color/white30"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginHorizontal="@dimen/dp_20"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="@dimen/dp_20">
                    <TextView
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/white"
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/window_light_setting"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/dp_20"/>
                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_gravity="center_vertical"
                        android:id="@+id/sc_screen_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="@color/switch_thumb_color"
                        app:trackTint="@color/switch_track_color"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white50"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:text="Music Settings"
                android:layout_marginStart="@dimen/dp_20"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="#1b1d20"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_129"
                android:layout_marginTop="@dimen/dp_10">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="@dimen/dp_20">
                    <TextView
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/white"
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Background Music"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/dp_20"/>
                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="@color/switch_thumb_color"
                        app:trackTint="@color/switch_track_color"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="@dimen/dp_20">
                    <TextView
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/white"
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Music Selection"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/dp_20"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_new_sport_modl_arrow_right"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white50"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:text="Phone settings"
                android:layout_marginStart="@dimen/dp_20"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="#1b1d20"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_129"
                android:layout_marginTop="@dimen/dp_10">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="@dimen/dp_20">
                    <TextView
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/white"
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Screen Always On"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/dp_20"/>
                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="@color/switch_thumb_color"
                        app:trackTint="@color/switch_track_color"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/ll_fps"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="@dimen/dp_20">
                    <TextView
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/white"
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Fitness Permission Settings"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/dp_20"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_new_sport_modl_arrow_right"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
