<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/history_rt"
    android:background="@drawable/bg_rect_msg_item_r20"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:layout_marginTop="@dimen/dp_7_5"
    android:weightSum="3"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <View
            android:id="@+id/null_view"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textStyle="bold"
            android:textColor="@color/main_text_color"
            android:gravity="bottom"
            android:id="@+id/diabetic_rick_item_content_item_tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15 May 2023"
            android:layout_above="@+id/null_view"
            android:layout_marginStart="@dimen/dp_20"
            app:layout_constraintBottom_toTopOf="@+id/diabetic_rick_item_content_item_tv_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/main_text_color"
            android:id="@+id/diabetic_rick_item_content_item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:30 AM"
            android:layout_below="@+id/null_view"
            android:layout_marginStart="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/diabetic_rick_item_content_item_tv_date"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/state_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/diabetic_rick_item_content_item_tv_2hour_8hour"
        app:layout_constraintStart_toEndOf="@+id/diabetic_rick_item_content_item_tv_date"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/diabetic_rick_item_content_item_iv_status"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/boold_sugar_result_icon_blue"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:textColor="#588df8"
            android:id="@+id/diabetic_rick_item_content_item_tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:layout_marginStart="@dimen/dp_5"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/main_text_color"
        android:layout_gravity="center_vertical"
        android:id="@+id/diabetic_rick_item_content_item_tv_2hour_8hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="&gt; 2hrs After Meal"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_alignParentEnd="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/state_ll"
        app:layout_constraintTop_toTopOf="parent"/>
</LinearLayout>
