<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/run_rel_sport_type"
            android:background="@color/main_bg_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20">
            <ImageView
                android:id="@+id/run_iv_sport_type"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_29"
                android:src="@mipmap/sport_icon1"
                android:adjustViewBounds="true"/>
            <TextView
                android:textSize="@dimen/sp_22"
                android:textColor="@color/white"
                android:id="@+id/run_tv_sport_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@+id/run_iv_sport_type"/>
            <ImageView
                android:id="@+id/run_iv_sport_type_select"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_29"
                android:src="@mipmap/login_select_icon"
                android:adjustViewBounds="true"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:layout_alignParentEnd="true"/>
            <ImageView
                android:id="@+id/run_iv_top_more"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/run_top_more_icon"
                android:adjustViewBounds="true"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_60">
                <RelativeLayout
                    android:id="@+id/run_rel_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.gms.maps.MapView
                        android:id="@+id/google_mapview"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <com.amap.api.maps.MapView
                        android:id="@+id/gaode_mapview"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/run_btn_start">
                    <RelativeLayout
                        android:id="@+id/run_rel_hr_bg"
                        android:background="@mipmap/run_sport_bg11"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_330"
                        android:layout_centerInParent="true">
                        <ImageView
                            android:layout_width="@dimen/dp_236"
                            android:layout_height="@dimen/dp_236"
                            android:src="@mipmap/run_back_1"
                            android:layout_centerInParent="true"/>
                        <ImageView
                            android:id="@+id/run_iv_hr_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/sport_hr_status7"/>
                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_m_5"
                            android:src="@mipmap/run_sport_hr_icon"
                            android:adjustViewBounds="true"
                            android:layout_above="@+id/run_tv_hr"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:textSize="@dimen/dp_56"
                            android:textColor="@color/white"
                            android:id="@+id/run_tv_hr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:layout_centerInParent="true"/>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_m_5"
                            android:layout_below="@+id/run_tv_hr"
                            android:layout_centerHorizontal="true">
                            <com.jstyles.jcring.views.temp.RunBatteryView
                                android:id="@+id/run_battery_view"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_12"/>
                            <TextView
                                android:textSize="@dimen/sp_12"
                                android:textColor="#36517a"
                                android:id="@+id/run_tv_battery_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:layout_marginStart="@dimen/dp_5"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/run_lin_sport_bg"
                        android:background="@mipmap/run_sport_bg12"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/run_rel_hr_bg"/>
                    <ImageView
                        android:id="@+id/run_iv_setting"
                        android:layout_width="@dimen/dp_27"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_23"
                        android:src="@mipmap/run_top_setting_icon"
                        android:adjustViewBounds="true"
                        android:layout_marginStart="@dimen/dp_20"/>
                    <com.jstyles.jcring.views.ecg_stick_1791.SwitchButton
                        android:id="@+id/run_switch_map"
                        android:visibility="gone"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_23"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_alignParentEnd="true"
                        app:animate="true"
                        app:borderWidth="@dimen/dp_0_3"
                        app:offBorderColor="#000000"
                        app:offColor="#000000"
                        app:onColor="#000000"
                        app:spotColor="@android:color/white"/>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/main_text_color"
                        android:id="@+id/run_tv_sport_tick"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:text="@string/sport_track_route"
                        android:layout_alignBottom="@+id/run_switch_map"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_toStartOf="@+id/run_switch_map"/>
                </RelativeLayout>
                <Button
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/main_text_color"
                    android:gravity="center"
                    android:id="@+id/run_btn_start"
                    android:background="@drawable/btn_red_r25"
                    android:layout_width="@dimen/dp_265"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="@string/start_yuga"
                    android:includeFontPadding="false"
                    android:layout_above="@+id/run_lin_sport_list"
                    android:layout_centerHorizontal="true"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/run_lin_sport_list"
                    android:background="@drawable/bg_rect_msg_item_r20"
                    android:padding="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_20">
                        <TextView
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/main_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/last_sport"
                            android:layout_centerVertical="true"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/lest_img"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <TextView
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/msg_remark_text_color"
                        android:id="@+id/run_tv_last_date_and_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:text="--"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15">
                        <TextView
                            android:textSize="@dimen/sp_21"
                            android:textColor="@color/main_text_color"
                            android:id="@+id/run_tv_last_value1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"/>
                        <TextView
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/msg_remark_text_color"
                            android:id="@+id/run_tv_last_unit1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="km"
                            android:layout_marginStart="@dimen/dp_3"/>
                        <TextView
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/main_text_color"
                            android:id="@+id/run_tv_last_value2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:layout_marginStart="@dimen/dp_20"/>
                        <TextView
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/msg_remark_text_color"
                            android:id="@+id/run_tv_last_unit2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="step"
                            android:layout_marginStart="@dimen/dp_3"/>
                        <TextView
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/main_text_color"
                            android:id="@+id/run_tv_last_value3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--:--:--"
                            android:layout_marginStart="@dimen/dp_20"/>
                        <LinearLayout
                            android:gravity="end"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/run_iv_last_type"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_sport_type"
                android:background="@color/black"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:elevation="@dimen/dp_1">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/layout_search"
                    android:background="@drawable/bg_stroke_white_50_r20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:paddingHorizontal="@dimen/dp_15"
                    android:paddingVertical="@dimen/dp_10">
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/search"
                        app:tint="@color/white"/>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:id="@+id/tv_searchSport"
                        android:background="@color/transparent"
                        android:paddingLeft="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/search_more"
                        android:maxLines="1"
                        android:textCursorDrawable="@null"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/run_rv_sport_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
