<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <com.jstyles.jcring.views.public_views.NoScrollViewPager
        android:orientation="horizontal"
        android:id="@+id/help_edit_Recy"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_marginTop="@dimen/dp_33"
        android:fillViewport="true"
        app:layout_constraintDimensionRatio="h,365:204"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:gravity="end|bottom"
        android:orientation="horizontal"
        android:id="@+id/search_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_34_5"
        app:layout_constraintBottom_toBottomOf="@+id/help_edit_Recy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/help_edit_Recy"
        app:layout_constraintVertical_bias="0.95"/>
    <RelativeLayout
        android:id="@+id/lingin_mian"
        android:background="@drawable/back_white_sanshi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_marginEnd="@dimen/dp_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help_edit_Recy">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/sp_14"
            android:textColor="#60111111"
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20_5"
            android:layout_marginBottom="@dimen/dp_20_5"
            android:text="@string/intput_pass"
            android:includeFontPadding="false"
            android:layout_centerHorizontal="true"/>
        <RelativeLayout
            android:id="@+id/ll_input"
            android:background="@drawable/login_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reset"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginEnd="@dimen/dp_18">
            <Space
                android:id="@+id/account_space"
                android:layout_width="@dimen/dp_16"
                android:layout_height="wrap_content"/>
            <com.jstyles.jcring.views.EditTextWithDelete
                android:textSize="@dimen/sp_14"
                android:textColor="@android:color/black"
                android:textColorHint="#30111111"
                android:id="@+id/et_signin_pass1"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:hint="@string/login_input_Newpsd"
                android:maxLines="1"
                android:layout_alignParentTop="true"
                android:textCursorDrawable="@null"
                android:paddingStart="@dimen/dp_12"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_inputpass"
            android:background="@drawable/login_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_marginBottom="@dimen/dp_21"
            android:layout_below="@+id/ll_input"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginEnd="@dimen/dp_18">
            <com.jstyles.jcring.views.EditTextWithDelete
                android:textSize="@dimen/sp_14"
                android:textColor="@android:color/black"
                android:textColorHint="#30111111"
                android:id="@+id/et_signin_pass2"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:hint="@string/login_input_ok"
                android:maxLines="1"
                android:maxLength="16"
                android:textCursorDrawable="@null"
                android:paddingStart="@dimen/dp_12"/>
        </RelativeLayout>
    </RelativeLayout>
    <Button
        android:textSize="@dimen/sp_17"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/bt_signin_signin"
        android:background="@drawable/ripple_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_14"
        android:text="@string/smssdk_submit"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lingin_mian"
        app:layout_constraintWidth_default="percent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
