<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/dialog_mian"
    android:background="@drawable/bg_rect_msg_item_r10"
    android:paddingTop="@dimen/dp_30"
    android:layout_width="@dimen/dp_320"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dp_25">
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/device_sport_end_tip"/>
    <TextView
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_keep"
        android:background="@drawable/bg_588bf8_r10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:text="@string/sport_run"
        android:paddingVertical="@dimen/dp_12_5"/>
    <TextView
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:textColor="#6ea4f5"
        android:gravity="center"
        android:id="@+id/tv_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/sport_stop"
        android:paddingVertical="@dimen/dp_12_5"/>
</LinearLayout>
